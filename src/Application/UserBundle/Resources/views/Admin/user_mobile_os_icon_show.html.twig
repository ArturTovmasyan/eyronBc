{% extends 'SonataAdminBundle:CRUD:base_show_field.html.twig' %}

{% block field %}
    <div>
        {% set osName = object.registrationIds|keys|first %}

        {% if osName == 'android' %}
            <i class="android"></i>
        {% endif %}

        {% if osName == 'ios' %}
            <i class="ios"></i>
        {% endif %}
    </div>
{% endblock %}
{% extends "::base.html.twig" %}

{% block confirm_email %}
{% endblock %}

{% block content %}

    <div class="container">
        <div  class="signup">
            <div class=" row">

                <h1 class="text-center">{{ 'email.update'|trans({}, 'FOSUserBundle') }}</h1>

                <div class="col-md-6 col-md-offset-3">

                    <p class="text-center">{{ 'email.update_message'|trans({'%email%': app.user.email}, 'FOSUserBundle') }}</p>

                    <form method="POST" action="{{ path('update_email') }}" class="form-horizontal">
                        {{ form_errors(form.email) }}
                        <div class="form-group">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.done, {'attr': {'class': 'btn btn-purple'}}) }}
                        </div>

                        {{ form_widget(form._token) }}
                    </form>

                </div>

            </div>
        </div>
    </div>


{% endblock %}

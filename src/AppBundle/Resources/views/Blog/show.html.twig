{% extends "::anp.html.twig" %}

{% block content %}
    <div>
        <h1>{{ blog.title }}</h1>
        <img src="{{ blog.imagePath|blImageFilter('goal_list_small') }}">
        {% set goals = blog.goals %}
        <p class="text-center">{{ 'RELATED GOALS' }}</p>
        {% for goal in goals %}
            <div class="text-center">{{ goal.id ~ '.' ~ goal.title }} <br />
                <img src="{{ goal.imagePath|blImageFilter('goal_list_small') }}">
            </div>
        {% endfor %}
    </div>
{% endblock %}

{%- block title -%}
    {{ blog.title }}
{%- endblock -%}

{%- block meta_description -%}
    {{- blog.metaDescription|markdown|striptags|sliceString -}}
{%- endblock -%}
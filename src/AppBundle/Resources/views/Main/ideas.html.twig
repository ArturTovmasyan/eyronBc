<div class="container">
    <h2 class="text-center">Explore over thousand great ideas </h2>

    <div class="row">

        <div class="col-sm-6 col-md-4">
            {% for goal in goals|slice(0, 2)  %}
                <div class="row">
                    <div class="col-sm-12">
                        <figure>
                            {% set image = goal.getPrimaryPhoto %}

                            {% if image %}
                                {% set image = goal.getPrimaryPhoto %}
                            {% endif %}
                            <a href="{{ path('inner_goal', {'id': goal.id }) }}">
                                <img src="{% if image %}{{ image.downloadLink  }} {% endif %}" height="260" alt="{{ goal.title }}">
                            </a>
                            <figcaption>
                                <ul class="row">
                                    <li class="col-sm-5">
                                        <a href="#">
                                            <span class="glyphicon glyphicon-plus"></span>ADD
                                        </a>
                                    </li>
                                    <li class="col-sm-5">
                                        <a href="#">
                                            <span class="glyphicon glyphicon glyphicon-ok"></span>DONE
                                        </a>
                                    </li>
                                    <li class="col-sm-2">
                                        <a href="#">
                                            <span class="glyphicon glyphicon-share-alt"></span>
                                        </a>
                                    </li>
                                </ul>
                            </figcaption>
                        </figure>
                    </div>
                </div>
            {% endfor %}

        </div>


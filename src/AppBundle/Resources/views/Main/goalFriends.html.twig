{% extends "AppBundle::layout.html.twig" %}

{% block content %}
    {{ parent() }}

    <div class="container">
        <div class="row">
            <div class="col-md-8">

                <div class="row ">
                    <div class="bg-white"><br />
                    <form role="search" action="#" method="GET">
                        <div class="form-group row">

                            <div class="col-sm-10">
                                <input type="text" name="search" class="form-control" id="inputEmail3" placeholder="{{ 'search_placeholder'|trans }}" value="{{ app.request.get('search') }}">
                            </div>
                            <div  class="col-sm-2">
                                <a href="{{ path('goal_friends') }}">
                                    <i class="glyphicon glyphicon-remove-circle" style="font-size: 25px"></i>
                                </a>
                            </div>
                        </div>
                    </form>
                    </div>
                </div>

                {% set counter = 0 %}
                {% for goalFriend in goalFriends %}
                    {% if counter is divisible by(2) %}
                        <div class="row">
                    {% endif %}

                            <div class="col-md-6">
                                <div class="bg-white clearfix">
                                    <figure class="image">
                                        <img src="{{ goalFriend.getPhotoLink() ? goalFriend.getPhotoLink() : asset('bundles/app/images/cover.jpg') }}"
                                             alt= "Some image" class="img-circle img-responsive" />
                                    </figure>

                                    <div class="">
                                        <h4>
                                            {{ goalFriend.firstname }} {{ goalFriend.lastname }}
                                        </h4>
                                        {% set stats = goalFriend.getStats %}
                                        <a href="#" class="text-grey">{{ 'listed_by'|trans }} {{ stats.listedBy }}</a> |
                                        <a href="#" class="text-grey">{{ 'completed'|trans }} {{ stats.doneBy }}</a>
                                    </div>
                                </div>
                            </div>

                    {% if counter is not divisible by(2) %}
                        </div>
                    {% endif %}
                    {% set counter = counter + 1 %}

                {% endfor %}


                {% if counter is not divisible by(2) and counter != 0  %}
                    </div>
                {% endif %}

                </div>



            <div class="col-md-4 ">
                {% include 'AppBundle:Blocks:completeProfile.html.twig' with {'user': app.user} %}
                {% include 'AppBundle:Blocks:myBucketlist.html.twig' with {'user': app.user} %}


                <ul class="right-block">
                    <li class="clearfix">
                        <span>{{ 'right_menu.ideas'|trans }}</span>
                        <a href="{{ path("goals_list") }}">{{ 'right_menu.show'|trans }}</a>
                    </li>
                    <li>
                        {%  include "AppBundle:Blocks:popularGoals.html.twig" with {'user': app.user, 'count': 2}  %}
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
{% extends "AppBundle::layout.html.twig" %}

{% block content %}
    {{ parent() }}

    <div class="container" id="goal-friends">
        <div class="row">
            <div class="col-sm-8">
                <div class="bg-white padding">
                    <form role="search" action="#" method="GET">
                        <div class="form-group row">

                            <div class="col-xs-10 col-sm-11">
                                <input type="text" name="search" class="form-control" id="inputEmail3" placeholder="{{ 'search_placeholder'|trans }}" value="{{ app.request.get('search') }}">
                            </div>
                            <div  class="col-xs-2 col-sm-1">
                                <a href="{{ path('goal_friends') }}" class="text-gray">
                                    <i class="icon remove-icon"></i>
                                </a>
                            </div>
                        </div>
                    </form>


                </div>

                {% set counter = 0 %}
                {% for goalFriend in pagination %}
                    {% if counter is divisible by(2) %}
                        <div class="row margin-top">
                    {% endif %}

                            <div class="col-sm-6">
                                <div class="bg-white padding clearfix">
                                     <a href="{{ path('user_profile', {'user': goalFriend.id, 'status': 0}) }}" style="display:block;">
                                        <div class="row no-gutter">
                                            <div class="col-sm-3">
                                                <figure>
                                                    <img src="{{ goalFriend.getPhotoLink() ? goalFriend.getPhotoLink() : asset('bundles/app/images/cover.jpg') }}"
                                                             alt="{{ goalFriend.firstName }}" class="img-circle img-responsive" />
                                                </figure>
                                            </div>

                                            <div class="col-sm-9">
                                                <div class="text-gray">
                                                    <h4 class="text-dark-gray">
                                                        {{ goalFriend.firstname }} {{ goalFriend.lastname }}
                                                    </h4>
                                                    {% set stats = goalFriend.getStats %}
                                                    <a href="#" class="text-gray">{{ 'listed_by'|trans }} {{ stats.listedBy }}</a> |
                                                    <a href="#" class="text-gray">{{ 'completed'|trans }} {{ stats.doneBy }}</a>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>

                    {% if counter is not divisible by(2) %}
                        </div>
                    {% endif %}
                    {% set counter = counter + 1 %}

                {% endfor %}


                {% if counter is not divisible by(2) and counter != 0  %}
                    </div>
                {% endif %}
                    <br />

                    <div class="navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>



            <div class="col-sm-4">
                {% include 'AppBundle:Blocks:completeProfile.html.twig' with {'user': app.user} %}
                {% include 'AppBundle:Blocks:myBucketlist.html.twig' with {'user': app.user} %}


                <div class="right-block  margin-top">
                    <div class="row">
                        <div class="col-sm-6">
                             <span>
                                 <i class="icon top-icon"></i>
                                 {{ 'right_menu.ideas'|trans }}
                            </span>
                        </div>
                        <div class="col-sm-6 text-right">
                            <a href="{{ path("goals_list") }}">{{ 'right_menu.show'|trans }}</a>
                        </div>
                    </div>
                    <hr/>

                    <div class="row">
                        <div class="col-sm-12">
                            {%  include "AppBundle:Blocks:popularGoals.html.twig" with {'user': app.user, 'count': 2}  %}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

{%- block title -%}
    {{ 'goal.friends_title'|trans }}
{%- endblock -%}

{%- block og_title -%}
    {{ 'goal.friends_title'|trans }}
{%- endblock -%}

{%- block og_description -%}
    {{ 'goal.friends_description'|trans }}
{%- endblock -%}

{%- block meta_description -%}
    {{ 'goal.friends_description'|trans }}
{%- endblock -%}

{%- block og_url -%}
    {{- app.request.uri -}}
{%- endblock -%}


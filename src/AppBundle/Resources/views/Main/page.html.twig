{% extends "AppBundle::layout.html.twig" %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1 class="text-center"> {{ page.name }} </h1>

                {{ page.description|raw }}
            </div>
        </div>
    </div>

{% endblock %}


{% block title %}
    {{ page.name }}
{% endblock %}

{% block og_title %}
    {{ page.name }}
{% endblock %}

{% block og_description %}
    {% if page.description %}
        {{ sliceString(page.description)|raw }}
    {% else %}
        {{ 'page.description'|trans }}
    {% endif %}
{% endblock %}


{% block meta_description %}
    {% if page.description %}
        {{ sliceString(page.description|raw) }}
    {% else %}
        {{ 'page.description'|trans }}
    {% endif %}
{% endblock %}

{%- block og_url -%}
    {{- app.request.uri }}
{%- endblock -%}

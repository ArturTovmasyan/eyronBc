{% if user is defined %}
    <div class="bg-white padding {% if user.getCompletedPercent()|round(1, 'floor') != 100 %}margin-top {% endif %}">

        <a href="{{ path('user_profile') }}" class="heading text-gray">
            <i class=" icon-list-icon"></i>
            {{ 'my_bucketlist'|trans }}
        </a>

        <hr/>

        {% set stats = user.getStats %}

        <ul class="horizontal-menu {{ app.request.locale }}">
            <li>
                <strong>{{ 'user_goal.active'|trans }}</strong>
                <span>{{ stats.active }}</span>
            </li>

            <li>
                <strong>{{ 'block_listed'|trans }}</strong>
                <span>{{ stats.listedBy }}</span>
            </li>

            <li>
                <strong>{{ 'block_completed'|trans |capitalize }}</strong>
                <span>{{ stats.doneBy }}</span>
            </li>
        </ul>
    </div>
{% endif %}
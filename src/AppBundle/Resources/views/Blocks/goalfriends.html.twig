{% if user is defined %}
    {% set goalFriends = goalFriends(user) %}
    <div class="bg-white padding margin-top">

        <a href="{{ path('goal_friends') }}" class="heading text-gray">
            <i class="goalfriends-icon"></i>
            {#<i class="icon-goalfrined-icon">#}
                {#<span class="path1"></span>#}
                {#<span class="path2"></span>#}
                {#<span class="path3"></span>#}
                {#<span class="path4"></span>#}
            {#</i>#}
            {{ 'goalfriends'|trans }} {{ goalFriends|length }}
        </a>

        <hr/>
        <ul class="list">

            {% for goalFriend in goalFriends|slice(0,2) %}
                <li class="clearfix">
                    <a href="{{ path('user_profile', {'user': goalFriend.id, 'status': 'all'}) }}">

                        <figure class="image">
                            {% if goalFriend.getPhotoLink() %}
                                <img src="{{ goalFriend.getPhotoLink()|blImageFilter('user_icon') }}" alt="{{ goalFriend.firstName }}" class="img-circle img-responsive"/>
                            {% else %}
                                {% set nameOnImage = goalFriend.firstName|slice(0,1) ~ goalFriend.lastName|slice(0,1) %}
                                {% set className = "user-no" ~ random(4) %}
                                <p class="no-image {{ className }}">{{ nameOnImage | upper }}</p>
                            {% endif %}
                        </figure>

                        <div class="pull-left text-gray">
                            <h4 class="text-dark-gray">{{ goalFriend.firstname }} {{ goalFriend.lastname }}</h4>

                            {% set stats = goalFriend.getStats %}
                            <a href="#" class="text-gray">{{ 'listed_by'|trans }} {{ stats.listedBy }}</a> |
                            <a href="#" class="text-gray">{{ 'completed'|trans }} {{ stats.doneBy }}</a>
                        </div>
                    </a>
                </li>
            {% endfor %}

        </ul>
    </div>
{% endif %}
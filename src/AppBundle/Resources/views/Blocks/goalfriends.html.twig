{% if user is defined %}
    {% set goalFriends = goalFriends(user) %}
    <div class="bg-white">
        <h4 class="padding">
            <a href="{{ path('goal_friends') }}" class="text-gray">
                <i class="glyphicon glyphicon-user"></i>
                {{ 'goalfriends'|trans }} {{ goalFriends|length }}
            </a>
        </h4>
        <hr/>
        <ul style="padding:0 0 10px;">

            {% for goalFriend in goalFriends|slice(0,2) %}
                <li class="clearfix" style="border-bottom:1px solid #cccccc;">

                    <figure class="image" style="margin:0 20px">
                        <img src="{{ goalFriend.getPhotoLink ? goalFriend.getPhotoLink() : asset('bundles/app/images/cover.jpg') }}" alt= "Some image" class="img-circle img-responsive"/>
                    </figure>

                    <div>
                        <h5 class="text-dark-gray">{{ goalFriend.firstname }} {{ goalFriend.lastname }}</h5>

                        {% set stats = goalFriend.getStats %}
                        <a href="#" class="text-gray">{{ 'listed_by'|trans }} {{ stats.listedBy }}</a> |
                        <a href="#" class="text-gray">{{ 'completed'|trans }} {{ stats.doneBy }}</a>
                    </div>
                </li>
            {% endfor %}

        </ul>
    </div>
{% endif %}
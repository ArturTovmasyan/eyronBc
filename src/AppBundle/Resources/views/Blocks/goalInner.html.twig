{% set inner = constant("AppBundle\\Entity\\Goal::INNER") %}
{% set view = constant("AppBundle\\Entity\\Goal::VIEW") %}

<div class="inner-container">
    <div class="container">
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                {% if aphorism  %}
                    <q>
                        {{ aphorism.content }}
                    </q>
                    <cite class="text-right">{{ aphorism.author }}</cite>

                {% endif %}
            </div>
        </div>

        <div class="row">
            <div class="col-md-9">
                <h2>{{ goal.title }}</h2>
            </div>
            <div class="col-md-3"></div>
        </div>

        <div class="inner-content">

            <div class="row">
                <div class="col-sm-7 col-md-9">
                    {% set images = goal.images %}
                    {% if images and images | length %}

                        <ul class="main-pgwSlideshow">
                            {% for image in images %}
                                <li>
                                    <img src="{{ image.downloadLink }}" alt="{{ goal.title }}" class="img-responsive">
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
                <div class="col-sm-5 col-md-3">
                    <div class="goal-information">
                        <ul class="row  goal-links ">
                        {% if page == inner and is_granted("ROLE_USER") %}
                            {% if not isMyGoal(goal, app.user, "add") %}
                                <li class="col-sm-6">
                                    <a href="{{ path('add_to_me_goal', {'id' : goal.id}) }}">
                                        <span class="glyphicon glyphicon-plus"></span>ADD
                                    </a>
                                </li>
                            {% endif %}

                            {% if  not isMyGoal(goal, app.user, 'done') %}
                                <li class="col-sm-6">
                                    <a href="{{ path('done_goal', {'id' : goal.id}) }}">
                                        <span class="glyphicon glyphicon glyphicon-ok"></span>DONE
                                    </a>
                                </li>
                            {% endif %}
                        {% endif %}
                            </ul>

                        <div>
                            <div data-simple-map-marker style="width: 99.8%; height: 298px"></div>
                        </div>
                        {% if page == inner %}
                            <ul>
                                <li>
                                    <ul class="row">
                                        <li class="col-md-4">
                                            done by
                                            <p class="purple">{{ doneByUsers|length }}</p>
                                        </li>
                                        <li class="col-md-4">
                                            <ul class="users">
                                                {% set left = 0 %}
                                                {% for doneByUser in doneByUsers %}
                                                    <li style="right: {{ left }}px">
                                                        <figure>
                                                            <img src="{{ doneByUser.getPhotoLink }}" class="img-circle img-responsive">
                                                        </figure>
                                                    </li>
                                                    {% set left = left + 20 %}
                                                {% endfor %}
                                            </ul>
                                        </li>
                                        <li class="col-md-4">
                                            <a href="#"></a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <ul class="row">
                                        <li class="col-md-4">
                                            listed by
                                            <p class="purple">{{ listedByUsers|length }}</p>
                                        </li>
                                        <li class="col-md-4">
                                            <ul class="users">
                                                {% set left = 0 %}
                                                {% for listedByUser in listedByUsers %}
                                                    <li style="right: {{ left }}px">
                                                        <figure>
                                                            <img src="{{ listedByUser.getPhotoLink }}" class="img-circle img-responsive">
                                                        </figure>
                                                    </li>
                                                    {% set left = left + 20 %}
                                                {% endfor %}
                                            </ul>
                                        </li>
                                        <li class="col-md-4">
                                            <a href="#"></a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="addthis_native_toolbox"></div>
                </div>
            </div>

            <div class="inner">

                <div class="row bg-white">

                    <div class="col-md-8">
                        {% if page == inner %}
                        <ul class="users-lists row">
                            <li class="col-sm-6">
                                <ul class="row no-gutter">
                                    <li class="col-xs-5">
                                        {{ 'done_by'|trans | upper }}
                                        <p class="text-purple">{{ goal.stats.doneBy }}</p>
                                    </li>
                                    <li class="col-xs-7">
                                        <ul class="users">
                                            {% set left = 80 %}
                                            {% for doneByUser in doneByUsers %}
                                                {% set nameOnImage = doneByUser.firstName|slice(0,1) ~ doneByUser.lastName|slice(0,1) %}
                                                {% set className = "user-no" ~ random(4) %}
                                                <li style="right: {{ left }}px">
                                                    {% if doneByUser.getPhotoLink  %}
                                                        <figure>
                                                            <img src="{{ doneByUser.getPhotoLink|blImageFilter('user_icon') }}" class="img-circle img-responsive" alt="{{ doneByUser.firstName }}">
                                                        </figure>
                                                    {% else %}
                                                        <p class="no-image {{ className }}">{{ nameOnImage | upper }}</p>
                                                    {% endif %}

                                                </li>
                                                {% set left = left + 20 %}
                                            {% endfor %}

                                            <li class="users-arrow">
                                                {% if goal.stats.doneBy == 0 %}
                                                    <i></i>
                                                {% else %}
                                                    <a data-ls-goal-users

                                                <li style="right: {{ left }}px">
                                                    {% if listedByUser.getPhotoLink  %}
                                                        <figure>
                                                            <img src="{{ listedByUser.getPhotoLink|blImageFilter('user_icon') }}" class="img-circle img-responsive" alt="{{ listedByUser.firstName }}">
                                                        </figure>
                                                    {% else %}
                                                        <p class="no-image {{ className }}">{{ nameOnImage | upper}}</p>
                                                    {% endif %}
                                                </li>
                                                {% set left = left + 20 %}
                                            {% endfor %}

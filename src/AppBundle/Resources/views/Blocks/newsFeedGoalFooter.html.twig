<ul class="row {% if inner is defined %} goal-links {% endif %} news-footer">
    {#{% if is_granted("ROLE_USER") %}#}

        {#{% if not isMyGoal(goal, app.user, "add") %}#}
        {% if goal.isMyGoal == 0 %}
            <li class="col-xs-4">
                <a href="javascript:void(0)"
                   data-ls-jquery-modal
                   data-ls-identity="activity{{ goal.id }}"
                   data-ls-template-url="{{ path('add_to_me_goal', {'id' : goal.id}) }}">
                    <i class="icon plus-icon"></i>{{ 'add'|trans }}
                </a>
            </li>
        {% else %}
            <li class="col-xs-4 transparent">
                <strong>
                    <i class="icon plus-icon-green"></i>{{ 'added'|trans |upper}}
                </strong>
            </li>

        {% endif %}

        {#{% if  not isMyGoal(goal, app.user, 'done') %}#}
        {% if  goal.isMyGoal != 2 %}
            <li class="col-xs-4">
                <a href="{{ path('done_goal', {'id' : goal.id}) }}">
                    <i class="icon ok-icon"></i>{{ 'done'|trans }}
                </a>
            </li>
        {% else %}
            <li class="col-xs-4 transparent">
                <strong>
                    <i class="icon green-ok-icon"></i>{{ 'completed'|trans |upper}}
                </strong>
            </li>
        {% endif %}
    {#{% endif %}#}

    {% if inner is not defined %}
        <li class="col-xs-4">
            <div class="addthis_native_toolbox" data-url="{{ app.request.host }}{{ path('inner_goal', {'slug': goal.slug}) }}"></div>
        </li>
    {% endif %}
</ul>

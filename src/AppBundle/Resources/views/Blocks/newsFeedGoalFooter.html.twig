<ul data-ng-controller="goalFooter" class="row {% if inner is defined %} goal-links {% endif %} news-footer no-gutter">
    <li class="col-xs-4 ng-hide" data-ng-show="!activity.goal.is_my_goal">
        <a href="javascript:void(0)"
           data-ls-jquery-modal
           data-ng-click="activity.goal.is_my_goal = 1"
           data-ls-identity="activity[[ activity.goal.id ]]"
           data-ls-template-url="{{ app.debug ? '/app_dev.php' : '' }}/goal/add-to-me/[[ activity.goal.id ]]">
            <i class="icon-plus-icon"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>
            <bdi>{{ 'add'|trans | capitalize}}</bdi>
        </a>
    </li>
    <li class="col-xs-4 transparent ng-hide" data-ng-show="activity.goal.is_my_goal && activity.goal.is_my_goal !== 0">
        <i class="icon-green-plus"><span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span></i>
        <bdi>{{ 'added'|trans | capitalize}}</bdi>
    </li>

        <li class="col-xs-4 ng-hide" data-ng-show="activity.goal.is_my_goal !== 2">
            <a data-ng-href="{{ app.debug ? '/app_dev.php':'' }}/goal/done/[[ activity.goal.id ]]">
                <i class="icon-ok-icon"><span class="path1"></span><span class="path2"></span></i>
                <bdi>{{ 'done'|trans | capitalize }}</bdi>
            </a>
        </li>
        <li class="col-xs-4 transparent ng-hide" data-ng-show="activity.goal.is_my_goal && activity.goal.is_my_goal === 2">
            <i class="icon-green-ok"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>
            <bdi>{{ 'completed'|trans | capitalize}}</bdi>
        </li>

    {% if inner is not defined %}
        <li class="col-xs-4">
            <div class="addthis_native_toolbox"
                 data-url="{{ app.request.getSchemeAndHttpHost }}{{ app.debug ? '/app_dev.php' : '' }}/goal/[[ activity.goal.slug ]]"
                 data-title="[[ activity.goal.title ]]"
                 data-description="[[ activity.goal.description ? activity.goal.description: '{{ 'goal.view_description'|trans }}' ]]"></div>
        </li>
    {% endif %}
</ul>

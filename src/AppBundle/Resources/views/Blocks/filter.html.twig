 <div data-ng-cloak class="filters-slider swiper-container ng-hide" data-ng-show="filterVisibility">
    <ul class="filter swiper-wrapper" data-ng-cloak>
        <li class="swiper-slide">
            <a href="{{ path('goals_list') }}">
                <span>
                    <img src="{{ asset('bundles/app/images/discover.png') }}"/>
                </span>
                <span>{{ 'discover'|trans }}</span>
            </a>
        </li>

        {% set mostPopular = false %}

        {% if categories|length > 0 %}
            {% for i in 0..(categories|length -1) %}
                {% if categories[i].getSlug() == 'most-popular' %}
                    {% set mostPopular = true %}
                {% endif %}
            {% endfor %}
        {% endif %}

        {% if mostPopular %}
        <li class="swiper-slide">
            <a href="{{ path('goals_list', {'category' : 'most-popular'}) }}">
                <span>
                    <img src="{{ asset('bundles/app/images/most-popular.png') }}"/>
                </span>
                <span>{{ 'most_popular'|trans }}</span>
            </a>
        </li>
        {% endif %}
        {% for category in categories %}
            {% if category.slug != 'most-popular' %}
                <li class="swiper-slide">
                    <a href="{{ path('goals_list', {'category' : category.slug}) }}" data-slug="{{ category.slug }}">
                        <span>
                            <img src="{{ category.downloadLink }}"/>
                        </span>
                        <span>{{ category.title }}</span>
                    </a>
                </li>
        {% endif %}
        {% endfor %}
    </ul>
     <div data-ng-show="isMobile" class="ng-hide">
         <!-- Add Arrows -->
         <div class="swiper-button-next swiper-button-white"></div>
         <div class="swiper-button-prev swiper-button-white"></div>
     </div>
</div>
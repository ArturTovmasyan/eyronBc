{% extends "AppBundle::layout.html.twig" %}

 {% block content %}

     {{ parent() }}

     {% set images = goal.images %}

     Category: {{ goal.title }}
     <br>
     Description: {{ goal.description }}
     <br>

    {% set tags = goal.tags %}

    {% if tags %}
        Tags:
        {% for tag in tags %}
            {{ tag.tag }} ,
        {% endfor %}
    {% endif %}

     <br />


     {% for image in images %}
        <img src="{{ image.downloadLink }}"> <br>
     {% endfor %}

 {% endblock %}

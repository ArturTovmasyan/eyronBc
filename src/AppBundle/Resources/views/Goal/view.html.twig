{% extends "AppBundle::layout.html.twig" %}

 {% block body %}

     {% set goal = userGoal.goal %}
     {% set images = goal.images %}

     Category: {{ goal.category }}
     <br>
     Description: {{ goal.description }}
     <br>
     Privacy: {{ userGoal.getPrivacyString|trans() }}
     <br>
     Quality: {{ userGoal.getQualityString|trans() }}
     <br>
     Status: {{ userGoal.getStatusString|trans() }}
     <br>

     {% for image in images %}
        <img src="{{ image.downloadLink }}"> <br>
     {% endfor %}

 {% endblock %}

{% extends "AppBundle::layout.html.twig" %}

{% block angularApp %} <html ng-app="goal" data-ng-controller="goalEnd"> {% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('app/bower_components/icheck/skins/all.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/app/less/taggle_button.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
<img src="{{ asset('bundles/app/images/cover.jpg') }}" alt= "Some image" class="img-responsive" />
<div class="goals-end">
<div class="container">
  <div class="row">

        <h2 class="text-center">Congratulations! <br />Your idea has been added successfully.</h2>

        <div class="col-md-6 col-md-offset-3">

            <div class="goal-end">
                <h4>A goal without target date is a dream ...</h4>

                <div style="height:250px;width:250px;border:1px solid purple;margin-bottom:10px;"> Here must be calendar</div>

                <form class="form-horizontal">
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <input type="text" google-places-autocomplete hidden-storage=".location-hidden" class="form-control" placeholder="Location ex. Yerevan, Armenia:" />
                            <input type="hidden" class="location-hidden"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-12">
                            <textarea class="form-control" rows="3" placeholder="Add a note" /></textarea>
                        </div>
                    </div>

                    <div class="form-group row" data-ng-repeat="(k,step) in stepsArray">

                        <div class="col-sm-8">
                            <input type="text"
                               class="form-control"
                               data-step
                               id="inputEmail3"
                               placeholder="Email">
                        </div>

                        <label for="inputEmail3" class="col-sm-2 control-label">
                            <span data-ng-show="step.switch">To Do</span>
                            <span data-ng-hide="step.switch">Done</span>
                        </label>

                        <div class="col-sm-2">
                            <div class="onoffswitch">
                                <input type="checkbox"
                                   name="onoffswitch"
                                   data-ng-model="step.switch"
                                   class="onoffswitch-checkbox"
                                   id="myonoffswitch">

                                <label class="onoffswitch-label" for="myonoffswitch">
                                    <span class="onoffswitch-inner"></span>
                                    <span class="onoffswitch-switch"></span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">

                        <label for="inputEmail3" class="col-sm-10 control-label purple text-left">Set as private</label>

                        <div class="col-sm-2">
                            <input type="checkbox" class="private-checkbox">
                        </div>

                    </div>

                    <p>By checking you are angree ...</p>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-purple">DISCOVER MORE</button>
                    </div>
                </form>
            </div>
        </div>
      </div>
  </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="https://maps.googleapis.com/maps/api/js?sensor=false&libraries=places&language=en"></script>
    <script src="{{ asset("app/bower_components/icheck/icheck.min.js") }}" type="text/javascript"></script>
    <script src="{{ asset('app/scripts/GoogleMaps/GoogleMaps.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/app/js/angular/goal.js') }}" type="text/javascript"></script>
{% endblock %}

{% extends "AppBundle::layout.html.twig" %}

{% block angularApp %} <html ng-app="goal" data-ng-controller="goalInner"> {% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('app/scripts/PgwSlideshow/pgwslideshow.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
<div class="inner-container">
    <div class="container">
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                {% if aphorism  %}
                    <q>
                       {{ aphorism.content }}
                    </q>
                {% endif %}
            </div>
        </div>

        <div class="row">
            <div class="col-md-9">
                <h2>{{ goal.title }}</h2>
            </div>
            <div class="col-md-3"></div>
        </div>

        <div class="inner-content">

            <div class="row">
                <div class="col-sm-7 col-md-9">
                    {% set  images = goal.images %}
                    {% if images %}

                        <ul class="main-pgwSlideshow">
                            {% for image in images %}
                                <li><img src="{{ image.downloadLink }}" alt="{{ goal.title }}"></li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
                <div class="col-sm-5 col-md-3">
                    <div class="goal-information">
                        {% if is_granted("ROLE_USER") %}
                            <ul class="row goal-links">
                                <li class="col-md-6 col-md-push-6">
                                    <a href="{{ path('done_goal', {'id' : goal.id}) }}">
                                        <span class="glyphicon glyphicon glyphicon-ok"></span>DONE

                                    </a>
                                </li>
                                <li class="col-md-6 col-md-pull-6">
                                    <a href="{{ path('add_to_me_goal', {'id' : goal.id}) }}">
                                        <span class="glyphicon glyphicon-plus"></span>ADD
                                    </a>
                                </li>
                            </ul>
                        {% endif %}

                        <div style="border:1px solid purple;height:300px;">
                            <div data-simple-map-marker style="width: 99.8%; height: 298px"></div>
                        </div>

                        <ul>
                            <li>
                                <ul class="row">
                                    <li class="col-md-4">
                                        done by
                                        <span class="purple">{{ doneByUsers|length }}</span>
                                    </li>
                                    <li class="col-md-4">
                                        {% for doneByUser in doneByUsers %}
                                            <img src="{{ doneByUser.getPhotoLink }}" class="img-circle img-responsive">
                                        {% endfor %}
                                    </li>
                                    <li class="col-md-4">
                                        <a href="#"></a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <ul class="row">
                                    <li class="col-md-4">
                                        listed by
                                        <span class="purple">{{ listedByUsers|length }}</span>
                                    </li>
                                    <li class="col-md-4">
                                        {% for listedByUser in listedByUsers %}
                                            <img src="{{ listedByUser.getPhotoLink }}" class="img-circle img-responsive">
                                        {% endfor %}
                                    </li>
                                    <li class="col-md-4">
                                        <a href="#"></a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    here will be add this share
                </div>
            </div>

            <div class="inner">
                <div class="row">
                    <div class="col-md-9">

                        <p>
                            {{ goal.description }}
                        </p>

                        {% if goal.videoLink %}

                        <iframe width="100%" height="500" src="{{ goal.videoLink }}" frameborder="0" allowfullscreen></iframe>
                        {% endif %}

                        <h4>Success stories</h4><hr />

                        <div style="width:100%; height:350px;background-color: #cccccc">
                            <p>messages place </p>
                        </div>

                        <div style="width:100%; height:350px;background-color: #cccccc">
                            <p>messages place </p>

                            <img src="" alt="Image" width="700" height="320"/>
                        </div>

                        <div style="width:100%; height:350px;background-color: #cccccc">
                            <p>messages place </p>

                            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                                <!-- Indicators -->
                                <ol class="carousel-indicators">
                                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                                </ol>

                                <!-- Wrapper for slides -->
                                <div class="carousel-inner" role="listbox">
                                    <div class="item active">
                                        <img src="..." alt="...">
                                        <div class="carousel-caption">
                                            ...
                                        </div>
                                    </div>
                                    <div class="item">
                                        <img src="..." alt="...">
                                        <div class="carousel-caption">
                                            ...
                                        </div>
                                    </div>
                                    ...
                                </div>

                                <!-- Controls -->
                                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>

                        <h4>Comments</h4><hr />

                        {% include 'FOSCommentBundle:Thread:async.html.twig' with {'id': goal.id} %}


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="https://maps.googleapis.com/maps/api/js?sensor=false&libraries=places&language=en"></script>
    <script src="{{ asset('app/scripts/PgwSlideshow/pgwslideshow.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('app/scripts/GoogleMaps/GoogleMaps.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/app/js/angular/goal.js') }}" type="text/javascript"></script>

{% endblock %}

{% extends "AppBundle::layout.html.twig" %}

{% block angularApp %} <html ng-app="goal" ng-controller="goalAdd"> {% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('app/bower_components/icheck/skins/all.css') }}" rel="stylesheet">
    <link href="{{ asset('app/bower_components/dropzone/downloads/css/dropzone.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <p>{{ 'success_story.title'|trans }}</p>

                <div>
                    {{ form_errors(form) }}

                    <form action="#" method="post" enctype="multipart/form-data">

                        <div class="form-group">
                            {{ form_widget(form.story, {'attr': {'class':'form-control', 'placeholder' : 'success_story.description' } } ) }}
                        </div>

                        <div class="text-center" ng-init="initDropzone('{{ path('add-story_images') }}')">
                            <div class="dropzone" id="goalDropzone"></div>
                        </div>

                        {{ form_widget(form.files, {'attr': { "value" : "[[ files ]]" } }) }}

                        <div class="form-group">
                            {{ form_widget(form.videoLink, {'attr': {'class':'form-control', 'placeholder' : 'success_story.url', 'ng-model': 'videolink' } }) }}
                        </div>

                        <iframe width="100%" height="500" ng-src="[[ trustedUrl(videolink) ]]" frameborder="0" allowfullscreen></iframe>

                        <div class="form-group">
                            <input type="submit" name="add_story" value="{{ 'btn_save'|trans }}">
                            <a href="{{ path('goals_list') }}">{{ 'btn_cancel'|trans }}</a>
                        </div>

                        {{ form_widget(form._token) }}

                    </form>
                </div>
            </div>
         </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("app/bower_components/icheck/icheck.min.js") }}" type="text/javascript"></script>
    <script src="{{ asset('app/bower_components/dropzone/downloads/dropzone.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('app/scripts/GoogleMaps/GoogleMaps.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/app/js/angular/goal.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/app/js/storyImages.js') }}" type="text/javascript"></script>
{% endblock %}

{#{% block stylesheets %}#}
    {#{{ parent() }}#}

    {#<link href="{{ asset('app/bower_components/icheck/skins/all.css') }}" rel="stylesheet">#}
    {#<link href="{{ asset('app/bower_components/dropzone/downloads/css/dropzone.css') }}" rel="stylesheet">#}
{#{% endblock %}#}

{#{% block content_header %}#}

    {#{% include "AppBundle:Blocks:topBlock.html.twig" %}#}

{#{% endblock %}#}

{#{% block content_container %}#}
    <div class="bg-white" data-ng-controller="goalAdd">
        <div class="container">
        <div class="row">
            <div class="col-md-12">

                <h3 class="story-title">{{ 'success_story.title'|trans }}</h3>

                <div>
                    {{ form_errors(form) }}

                    <form action="{{ app.request.requestUri }}" method="post" enctype="multipart/form-data">

                        <div class="form-group">
                            {{ form_widget(form.story, {'attr': {'class':'form-control', 'placeholder' : 'success_story.description', 'rows' :"4" } } ) }}
                        </div>

                        <div class="text-center" data-ng-init="initDropzone('{{ path('add-story_images') }}')">
                            <div class="dropzone" id="goalDropzone">
                                <div class="dz-message">
                                    <h3>{{ 'drag_drop_story'|trans }}</h3>
                                    <p>{{ 'upload'|trans | raw}}</p>
                                </div>
                            </div>
                        </div>

                        {{ form_widget(form.files, {'attr': { "value" : "[[ files ]]" } }) }}

                        <div class="form-group">
                            {{ form_widget(form.videoLink, {'attr': {'class':'form-control', 'placeholder' : 'success_story.url', 'ng-model': 'videolink' } }) }}
                        </div>

                        <iframe data-ng-show="videolink" width="100%" height="500" ng-src="[[ trustedUrl(videolink) ]]" frameborder="0" allowfullscreen></iframe>

                        <div class="form-group text-center bottom">
                            <input type="submit" name="add_story" value="{{ 'btn_save'|trans }}" class="btn btn-purple button-lg">
                            <a href="javascript:void(0)" rel="modal:close" class="btn btn-transparent button-lg">{{ 'btn_cancel'|trans }}</a>
                        </div>

                        {{ form_widget(form._token) }}

                    </form>
                </div>
            </div>
         </div>
    </div>
    </div>

{#{% endblock %}#}


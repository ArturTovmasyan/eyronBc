{% extends "AppBundle::layout.html.twig" %}

{% block angularApp %} <html data-ng-app="goal" data-ng-controller="goalAdd"> {% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('app/bower_components/dropzone/downloads/css/dropzone.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
{{ parent() }}

    {% if goalId is defined and goalId %}
        <div class="form-modal" data-ng-controller="goalEnd" style="width: auto;display: none;position: absolute;z-index: 2000;">
            {{ render(controller("AppBundle:Goal:manage", {id: goalId})) }}
        </div>
    {% endif %}

    {#<div style="position: absolute;width: 100%;height:100%;vertical-align: middle;line-height: 100%;background-color: transparent;z-index: 10000">#}
        {#<img data-ng-show="loading" src="{{ asset('bundles/app/images/loading.gif') }}" alt="loading" style="z-index: 10000"/>#}
    {#</div>#}
    <form method="post" id="goal-create-form" class="main-form" action="#" enctype="multipart/form-data">
        <img data-ng-cloak data-ng-show="loading" src="{{ asset('bundles/app/images/loading.gif') }}" alt="loading" class="loading"/>
         <div class="content-top">
             <div class="container">
                 <div class="row">
                     <div class="col-sm-8">

                         <div class="row">
                             <div class="col-xs-1 suggest-input">
                                 <input id="{{ form.status.vars.id }}" name="{{ form.status.vars.full_name}}" type="checkbox" {% if form.status.vars.data == 1 %} checked {% endif %}value="1" >
                             </div>

                             <div class="col-xs-11">
                                 <h3 class="text-purple">
                                     {{ 'goal.public'|trans }}
                                 </h3>
                             </div>
                         </div>

                         <div class="row">
                             <div class="col-sm-10 col-sm-offset-1">
                                 <p class="text-gray">{{ 'goal.agree'|trans }}</p>
                             </div>
                         </div>

                     </div>

                     <div class="col-sm-4 text-right">
                         <div class="buttons">
                             {#<img data-ng-show="loading" src="{{ asset('bundles/app/images/loading.gif') }}" alt="loading"/>#}
                             <button type="submit" data-ng-disabled="disablePreview" class="btn btn-transparent goal-view-submit" name="btn_preview">
                                 <span>{{ 'goal.preview'|trans }}</span>
                             </button>
                             <button type="submit"
                                 data-ls-jquery-modal
                                 data-ls-identity="goalSave"
                                 data-ls-template="[[ goalSubmitTemplate ]]"
                                 class="btn btn-purple goal-create-submit"
                                 name="btn_publish">{{ 'goal.publish'|trans }}
                                 <i class="icon-arrow-right"></i>
                             </button>
                         </div>
                     </div>
                 </div>
             </div>
         </div>

        <div class="container">
             <div class="row">
                 <div class="col-sm-12">
                     <div class="goals">
                     {{ form_errors(form) }}

                         <div class="row">
                             <div class="col-xs-10 col-xs-offset-1 ">

                                 <div class="form-group">
                                     {{ form_widget(form.title, {'attr': {'class':'form-control title', 'placeholder' : 'Title' } }) }}
                                 </div>

                                 <div class="form-group">

                                     {{ form_widget(form.description, {'attr': {'class':'form-control margin-top', 'placeholder' : 'Description', 'rows' :"4", "ng-model":"description", "ng-init":"description ='" ~ form.vars.value.description ~ "'", "value" : "[[ description ]]" } }) }}
                                     <div class="tags" data-ng-cloak>
                                         <button data-ng-repeat="tag in tags" type="button" class="btn btn-purple"> [[ tag ]] </button>
                                     </div>

                                     <p class="text-gray">
                                         {{ 'goal.description_title'|trans|raw}}
                                     </p>
                                     {{ form_widget(form.hashTags, {'attr': { "value" : "[[ tags ]]" } }) }}

                                 </div>

                                 <div class="text-center" data-ng-init="initDropzone('{{ path('app_rest_goal_addimages') }}')">
                                     <div class="dropzone" id="goalDropzone">
                                         <div class="dz-message">
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <span class="btn-purple">
                                                        <i class="icon-cloud"></i>BROWSE
                                                    </span>

                                                    <h3 class="text-dark-gray">
                                                        {{ 'drag_drop'|trans }}
                                                    </h3>
                                                </div>
                                            </div>

                                            <p class="text-gray">{{ 'upload'|trans | raw}}</p>
                                         </div>
                                     </div>
                                 </div>

                                 {{ form_widget(form.files, {'attr': { "value" : "[[ files ]]" } }) }}

                                 {% set images = form.vars.value.images %}

                                 <div class="row">
                                     {% for image in images %}
                                             <div class="col-sm-2">
                                                 <a href="{{ path("remove_image", {'filename' : image.filename }) }}">
                                                     {#<i class="icon remove-icon"></i>#}
                                                     <i class="icon-remove-video-link"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>
                                                 </a>
                                                 <img src="{{ image.downloadLink }}" alt="{{ image.filename }}" class="img-responsive"/>
                                             </div>
                                     {% endfor %}
                                 </div>
                                 <br />

                                 <div {% if not is_granted("ROLE_ADMIN") %} class="sr-only" {% endif %}>
                                     {{ form_widget(form.language, {'attr': {'class':'form-control' } }) }}
                                 </div>

                                 <br />
                                 {{ form_widget(form.videoLink, {'attr': {'class':'form-control', 'placeholder' : 'Type in a youtube or vimeo link in the field', 'ng-model': 'videolink' } }) }}

                             </div>
                         </div>

                         {{ form_widget(form._token) }}
                     </div>
                 </div>
             </div>
        </div>
    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts output='js/app_goal_add.js'
        'bundles/app/js/images.js'
        'app/bower_components/dropzone/downloads/dropzone.min.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}

{%- block title -%}
    {{ 'goal.add_title'|trans() }}
{%- endblock -%}

{%- block og_title -%}
    {{ 'goal.add_title'|trans() }}
{%- endblock -%}

{%- block og_description -%}
    {{ 'goal.add_description'|trans() }}
{%- endblock -%}

{%- block meta_description -%}
    {{ 'goal.add_description'|trans() }}
{%- endblock -%}

{%- block og_url -%}
{{- app.request.uri -}}
{%- endblock -%}

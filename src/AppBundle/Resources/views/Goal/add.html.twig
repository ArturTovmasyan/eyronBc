{% extends "AppBundle::layout.html.twig" %}

{% block javascripts %}

    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/app/js/images.js') }}"></script>

{% endblock %}


 {% block body %}

     {{ parent() }}

     <div>
         {{ form_errors(form) }}
         <form class="form-horizontal" method="post" action="#" enctype="multipart/form-data">

             <div class="form-group">
                 <label for="{{ form.title.vars.id }}" class="col-sm-2 control-label">{{ form_label(form.title) }}</label>
                 <div class="col-sm-10">
                     {{ form_widget(form.title, {'attr': {'class':'form-control'} }) }}
                 </div>
             </div>


             <div class="form-group">
                 <label for="{{ form.description.vars.id }}" class="col-sm-2 control-label">{{ form_label(form.description) }}</label>
                 <div class="col-sm-10">
                     {{ form_widget(form.description, {'attr': {'class':'form-control'} }) }}
                 </div>
             </div>

             {{ form_widget(form.bl_multiple_file) }}

             <div class="form-group">
                 <div class="col-sm-offset-2 col-sm-10">
                     <button type="submit" class="btn btn-default">Save</button>
                 </div>
             </div>

             {{ form_widget(form._token) }}

         </form>
     </div>

 {% endblock %}

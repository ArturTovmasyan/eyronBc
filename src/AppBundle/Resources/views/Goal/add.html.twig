{% extends "AppBundle::layout.html.twig" %}

{% block angularApp %} <html ng-app="goal" ng-controller="goalAdd"> {% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('app/bower_components/icheck/skins/all.css') }}" rel="stylesheet">
    <link href="{{ asset('app/bower_components/dropzone/downloads/css/dropzone.css') }}" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('bundles/app/js/images.js') }}" type="text/javascript"></script>
    <script src="{{ asset("app/bower_components/icheck/icheck.min.js") }}" type="text/javascript"></script>
    <script src="{{ asset('app/bower_components/dropzone/downloads/dropzone.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('app/scripts/GoogleMaps/GoogleMaps.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/app/js/angular/goal.js') }}" type="text/javascript"></script>

{% endblock %}


 {% block content %}

     {{ parent() }}
 <form method="post" class="main-form" action="{{ path('add_goal') }}" enctype="multipart/form-data">
     <div class="content-top">
         <div class="container">
             <div class="row">
                 <div class="col-sm-6">
                     <h3 class="purple">Suggest as public
                         <input id="{{ form.status.vars.id }}" name="{{ form.status.vars.full_name}}" type="checkbox" value="1">
                     </h3>
                     <p>By checking you agree to ....</p>
                 </div>
                 <div class="col-sm-6 text-right">
                     <div class="buttons">
                         {#<button type="button" class="btn btn-default">#}
                             {#<span class="glyphicon glyphicon-chevron-left"></span>#}
                             {#GO BACK TO EDIT#}
                         {#</button>#}
                         <button type="button" class="btn btn-default" name="btn_preview" ng-click="submit()">PREVIEW</button>
                         <button type="button" class="btn btn-purple" name="btn_publish" ng-click="submit()">PUBLISH
                             <span class="glyphicon glyphicon-chevron-right"></span>
                         </button>
                     </div>
                 </div>
             </div>
         </div>
     </div>

    <div class="container">

         <div class="row">

             <div class="col-md-12">
                 <div class="goals">
                 {{ form_errors(form) }}

                         <div class="form-group">
                             {{ form_widget(form.title, {'attr': {'class':'form-control title', 'placeholder' : 'Enter Title of the goal' } }) }}
                         </div>

                         <div class="row">
                             <div class="col-md-offset-1 col-md-10">
                                 <div class="form-group">
                                     {{ form_widget(form.description, {'attr': {'class':'form-control', 'placeholder' : 'Description', 'rows' :"4", "ng-model":"description", "value" : "[[ description ]]" } }) }}
                                     <div class="tags">
                                         <button ng-repeat="tag in tags" type="button" class="btn btn-purple"> [[ tag ]] </button>
                                     </div>

                                     <p>Any word in title and description can be converted into a
                                         hashtag simply by placing a '#' sign in the beginning of the word.
                                     </p>
                                     {{ form_widget(form.hashTags, {'attr': { "value" : "[[ tags ]]" } }) }}

                                 </div>

                                 <div class="text-center" ng-init="initDropzone('{{ path('add_images') }}','.main-form')">
                                     <div class="dropzone" id="goalDropzone"></div>
                                 </div>

                                 {{ form_widget(form.files, {'attr': { "value" : "[[ files ]]" } }) }}

                                 <div class="form-group">
                                     {{ form_widget(form.videoLink, {'attr': {'class':'form-control', 'placeholder' : 'http://www.laravelsoft.com/' } }) }}
                                 </div>

                                 <iframe width="100%" height="500" src="https://www.youtube.com/embed/O2EwhK28zYI" frameborder="0" allowfullscreen></iframe>
                             </div>
                         </div>

                     {{ form_widget(form._token) }}
                 </div>
             </div>
         </div>
    </div>
 </form>

 {% endblock %}

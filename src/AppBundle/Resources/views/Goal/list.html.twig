{% extends "AppBundle::layout.html.twig" %}

{% block angularApp %} <html data-ng-app="goal" data-ng-controller="goalList"> {% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('app/bower_components/dropzone/downloads/css/dropzone.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="content-top">
        <div class="container">

            <div class="row">

                <div class="col-sm-6">

                    {% if 'travel' in app.request.get('category') %}
                        <a href="javascript:void(0)" data-ng-click="showMap = !showMap" class="text-gray map-top"> MAP
                            <i class="icon down-icon" data-ng-show="showMap"></i>
                            <i class="icon up-icon" data-ng-hide="showMap"></i>
                        </a>
                    {% endif %}
                </div>

                <div class="col-sm-6 text-right"
                     data-ng-init="adventureTextItem=adventureText('{{ app.request.get('category') }}',{{ categoriesJson }})">
                    <button type="button"
                        data-ng-cloak
                        class="btn btn-default text-purple no-bg"
                        data-container="body"
                        data-toggle="popover"
                        data-placement="bottom"
                        data-content="hello"
                        data-ng-click="filter = !filter"
                        data-template='{% include 'AppBundle:Blocks:filter.html.twig' with { "categories" : categories } %}'>

                        [[ adventureTextItem ? adventureTextItem.title:"MOST POPULAR" ]]

                        <i class="icon down-icon" data-ng-hide="filter"></i>
                        <i class="icon up-icon ng-hide" data-ng-show="filter"></i>
                    </button>
                </div>
            </div>
        </div>
        {% if 'travel' in app.request.get('category') %}
            <div class="slide" data-ng-hide="showMap">
                <div data-simple-map-marker data-refresh="showMap" style="width: 100%; height: 300px"></div>
            </div>
        {% endif %}
    </div>

    <div class="container ideas-list">
        <h2 class="text-center text-dark"> {{ 'goal.list_title'|trans }}</h2>

        {% if goals.getTotalItemCount > 0 %}

            <div class="row" id="row">
                {% for goal in goals|slice(0, 3)  %}

                    <div class="col-sm-6 col-md-4">
                        <figure>

                            <h3>{{ goal.title }}</h3>

                            {% set image = goal.getListPhoto %}

                            {% if image %}
                                {% set image = goal.getListPhoto %}
                            {% endif %}
                            <a href="{{ path('inner_goal', {'slug': goal.slug }) }}" id="goalTitle">
                                <span class="overlay"></span>
                                <img src="{% if image %}{{ image.downloadLink|blImageFilter('goal_list_1')  }} {% endif %}" alt="{{ goal.title }}"/>
                            </a>

                            <div class="absolute">
                                <ul>
                                    <li>
                                        <a href="{{ path('inner_goal', {'slug': goal.slug }) }}">
                                            {{ 'home_listed_by'|trans({},'messages') }}
                                            <span>{{ goal.stats.listedBy }}</span>
                                            <i class="icon user-icon"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="{{ path('listed_users', {'slug': goal.slug} ) }}">
                                            {{ 'home_complete'|trans({},'messages') }}
                                            <span>{{ goal.stats.doneBy }}</span>
                                            <i class="icon user-icon"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>

                            <figcaption>
                                {%  include "AppBundle:Blocks:goalFooter.html.twig" with {'goal' : goal }  %}
                            </figcaption>
                        </figure>
                    </div>
                {% endfor %}
            </div>

            <div class="row">
                {% for goal in goals|slice(3, 2)  %}

                    <div class="col-md-{{ loop.first ?  4 : 8 }}">
                        <figure>

                            <h3>{{ goal.title }}</h3>

                            {% set image = goal.getListPhoto %}

                            {% if image %}
                                {% set image = goal.getListPhoto %}
                            {% endif %}

                            <a href="{{ path('inner_goal', {'slug': goal.slug }) }}" >
                                <span class="overlay"></span>
                                <img src="{% if image %}{% if loop.first %}{{ image.downloadLink|blImageFilter('goal_list_1')  }}{% else %}
                                 {{ image.downloadLink|blImageFilter('goal_list_3')  }}{% endif %}{% endif %}" alt="{{ goal.title }}"/>
                            </a>

                            <div class="absolute">
                                <ul>
                                    <li>
                                        <a href="{{ path('inner_goal', {'slug': goal.slug }) }}">
                                            {{ 'home_listed_by'|trans({},'messages') }}
                                            <span>{{ goal.stats.listedBy }}</span>
                                            <i class="icon user-icon"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="{{ path('listed_users', {'slug': goal.slug})}}">
                                            {{ 'home_complete'|trans({},'messages') }}
                                            <span>{{ goal.stats.doneBy }}</span>
                                            <i class="icon user-icon"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>

                            <figcaption>
                                {%  include "AppBundle:Blocks:goalFooter.html.twig" with {'goal' : goal }  %}
                            </figcaption>
                        </figure>
                    </div>

                {% endfor %}
            </div>

            <div class="row">
                {% for goal in goals|slice(5, 2)  %}

                    <div class="col-md-{{ loop.first ?  8 : 4 }}">
                        <figure>

                            <h3>{{ goal.title }}</h3>

                            {% set image = goal.getListPhoto %}

                            {% if image %}
                                {% set image = goal.getListPhoto %}
                            {% endif %}
                            <a href="{{ path('inner_goal', {'slug': goal.slug }) }}" class="height">
                                <span class="overlay height"></span>
                                <img src="{% if image %}{{ image.downloadLink|blImageFilter('goal_list_2')  }} {% endif %}" alt="{{ goal.title }}"/>
                            </a>

                            <div class="absolute">
                                <ul>
                                    <li>
                                        <a href="{{ path('inner_goal', {'slug': goal.slug }) }}">
                                            {{ 'home_listed_by'|trans({},'messages') }}
                                            <span>{{ goal.stats.listedBy }}</span>
                                            <i class="icon user-icon"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="{{ path('listed_users', {'slug': goal.slug} ) }}">
                                            {{ 'home_complete'|trans({},'messages') }}
                                            <span>{{ goal.stats.doneBy }}</span>
                                            <i class="icon user-icon"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>

                            <figcaption>
                                {%  include "AppBundle:Blocks:goalFooter.html.twig" with {'goal' : goal }  %}
                            </figcaption>
                        </figure>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="empty-text text-center">{{ 'goal.not_found'|trans }}</p>
        {% endif %}
        {# display navigation #}
        <div class="navigation text-center">
            {{ knp_pagination_render(goals) }}
        </div>
    </div>
{% endblock %}

{%- block title -%}
    {{ 'goal.og_title'|trans }}
{%- endblock -%}

{%- block og_title -%}
    {{ 'goal.og_title'|trans }}
{%- endblock -%}

{%- block og_description -%}
    {{ 'goal.list_description'|trans }}
{%- endblock -%}

{%- block meta_description -%}
    {{ 'goal.list_description'|trans }}
{%- endblock -%}

{%- block og_url -%}
{{- app.request.uri -}}
{%- endblock -%}
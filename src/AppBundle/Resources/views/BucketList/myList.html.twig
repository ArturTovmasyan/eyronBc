{% extends "AppBundle::layout_top.html.twig" %}

{# set current user to user with joined relation #}
{% set user = currentUser %}
{% set status = app.request.get('status') %}
{% set all = null %}
{% set active = 'active-goals' %}
{% set completed = 'completed-goals' %}

{% set importantUrgent = app.request.get('f_1') %}
{% set notImportantUrgent = app.request.get('f_2') %}
{% set importantNotUrgent = app.request.get('f_3') %}
{% set notImportantNotUrgent = app.request.get('f_4') %}
{% set dreamFilter = app.request.get('d') %}

    {% if importantUrgent == "on" %}
        {% set iuTitle = 'my_bucket_list.iu_title'|trans %}
        {% set iuDescription = 'my_bucket_list.iu_description'|trans %}
    {% endif %}

    {% if notImportantUrgent == "on" %}
        {% set noIUTitle = 'my_bucket_list.noiu_title'|trans %}
        {% set noIUDescription = 'my_bucket_list.noiu_description'|trans %}
    {% endif %}

    {% if importantNotUrgent == "on" %}
        {% set iNoUTitle = 'my_bucket_list.inou_title'|trans %}
        {% set iNoUDescription = 'my_bucket_list.inou_description'|trans %}
    {% endif %}

    {% if notImportantNotUrgent == "on" %}
        {% set noInoUTitle = 'my_bucket_list.noinou_title'|trans %}
        {% set noInoUDescription = 'my_bucket_list.noinou_description'|trans %}
    {% endif %}

  {% if dreamFilter == "1" %}
      {% set dreamTitle = 'my_bucket_list.dream_title'|trans %}
      {% set dreamDescription = 'my_bucket_list.dream_description'|trans %}
  {% endif %}

{% block angularApp %}
<html data-ng-app="goal" data-ng-controller="goalMyBucketList">
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('app/bower_components/dropzone/downloads/css/dropzone.css') }}" rel="stylesheet">
    <style>
        html {
            overflow-y: auto !important;
        }
    </style>
{% endblock %}

{%- block title -%}

    {% if status == completed %}
        {{- 'my_bucket_list.completed_goals'|trans ~ dreamTitle|default('') ~ iuTitle|default('') ~ noIUTitle|default('') ~ iNoUTitle|default('') ~ noInoUTitle|default('') -}}
    {% elseif status == active %}
        {{- 'my_bucket_list.active_goals'|trans ~ dreamTitle|default('') ~ iuTitle|default('') ~ noIUTitle|default('') ~ iNoUTitle|default('') ~ noInoUTitle|default('') -}}
    {% elseif status == all %}
        {{- 'my_bucket_list.title'|trans ~ dreamTitle|default('') ~ iuTitle|default('') ~ noIUTitle|default('') ~ iNoUTitle|default('') ~ noInoUTitle|default('') -}}
    {% elseif status  == 'all' %}
        {{- 'goal.friend_inner_title'|trans -}}
    {% endif %}

{%- endblock -%}

{%- block og_title -%}

    {% if status == completed %}
        {{- 'my_bucket_list.completed_goals'|trans ~ dreamTitle|default('') ~ iuTitle|default('') ~ noIUTitle|default('') ~ iNoUTitle|default('') ~ noInoUTitle|default('') -}}
    {% elseif status == active %}
        {{- 'my_bucket_list.active_goals'|trans ~ dreamTitle|default('') ~ iuTitle|default('') ~ noIUTitle|default('') ~ iNoUTitle|default('') ~ noInoUTitle|default('') -}}
    {% elseif status == all %}
        {{- 'my_bucket_list.title'|trans ~ dreamTitle|default('') ~ iuTitle|default('') ~ noIUTitle|default('') ~ iNoUTitle|default('') ~ noInoUTitle|default('') -}}
    {% elseif status  == 'all' %}
        {{- 'goal.friend_inner_title'|trans -}}
    {% endif %}

{%- endblock -%}

{%- block og_description -%}

    {% if status == completed %}
        {{- 'my_bucket_list.completed_description'|trans ~ dreamDescription|default('') ~ iuDescription|default('') ~ noIUDescription|default('') ~ iNoUDescription|default('') ~ noInoUDescription|default('') -}}
    {% elseif status == active %}
        {{- 'my_bucket_list.active_description'|trans ~ dreamDescription|default('') ~ iuDescription|default('') ~ noIUDescription|default('') ~ iNoUDescription|default('') ~ noInoUDescription|default('') -}}
    {% elseif status == all %}
        {{- 'my_bucket_list.description'|trans ~ dreamDescription|default('') ~ iuDescription|default('') ~ noIUDescription|default('') ~ iNoUDescription|default('') ~ noInoUDescription|default('') -}}
    {% elseif status  == 'all' %}
        {{- 'goal.friend_inner_description'|trans -}}
    {% endif %}

{%- endblock -%}

{%- block og_image -%}
    {% set images = profileUser.getPhotoLink %}
    {%- if images -%}
        {{- host ~ images -}}
    {% else %}
        {{- parent() -}}
    {%- endif -%}
{%- endblock -%}

{%- block meta_description -%}
    {{ 'my_bucket_list.description'|trans }}
{%- endblock -%}

{%- block og_url -%}
    {{- app.request.uri }}
{%- endblock -%}

{% block content_header %}

    {% set stats = profileUser.getStats %}
    {% set lastName = profileUser.lastName %}
    {% set firstName = profileUser.firstName %}
    {% set nameOnImage = firstName|slice(0,1) ~ lastName|slice(0,1) %}
    {% set className = "profile-image user-no" ~ random(4) %}
    {% set imgPath ='bundles/app/images/cover' ~ random(4) ~ '.png' %}

    <div class="content-header">
        <figure>
            <span class="overlay"></span>
            <img src="
            {% if profileUser.getPhotoLink %}
                {{ profileUser.getPhotoLink|blImageFilter('user_cover') }}
            {% else %}
                {{ asset(imgPath) }}
            {% endif %}"
                 alt="Profile Cover Photo" class="img-responsive" />
        </figure>

        <div class="profile">
            <div class="container">

                <div class="row">
                    <div class="col-sm-4">
                        <figure>
                            <div>
                                {% if profileUser.getPhotoLink %}
                                    <img src="{{ profileUser.getPhotoLink|blImageFilter('user_image') }}" alt="Profile image" class="img-responsive img-circle"/>
                                {% else %}
                                    <span class="no-image {{ className }}">{{ nameOnImage }}</span>
                                {% endif %}
                            </div>

                            <figcaption>
                                <ul>
                                    <li>
                                        <span>{{ 'user_goal.active'|trans | capitalize }}</span>
                                        <span>{{ stats.active }}</span>
                                    </li>

                                    <li>
                                        <span>{{ 'block_listed'|trans | capitalize }}</span>
                                        <span>{{ stats.listedBy }}</span>
                                    </li>

                                    <li>
                                        <span>{{ 'block_completed'|trans |capitalize }}</span>
                                        <span>{{ stats.doneBy }}</span>
                                    </li>
                                </ul>
                            </figcaption>
                        </figure>
                    </div>
                    <div class="col-sm-4">
                        {% if profileUser.showName %}
                             <h1 class="bg-blue {% if profileUser.showName|length > 12 %}title-smaller{% endif %}">{{ profileUser.showName }}</h1>
                        {% endif %}
                    {% if  profileUser.getAge  %}
                    <p>{{ profileUser.getAge }} {{ "my_bucket_list.year_old"|trans }}</p>
                    {% endif %}
                    </div>

                    {% if profileUser.id == app.user.id %}
                        <div class="col-sm-4">
                            <div class="text-right">
                                <a href="javascript:void(0)"
                                   data-ls-identity="settingModalInMyBucketList"
                                   data-ls-template-url="{{ path("settings") }}"
                                   data-ls-jquery-modal>
                                    <i class="icon-settings"><span class="path1"></span><span class="path2"></span></i>
                                </a>
                            </div>


                            <div class="profile-information" data-ng-show="{{ user.getCompletedPercent()|round(1, 'floor') }} != 100">
                                <em>{{ 'complete_message'|trans }}</em>

                                <div class="row">
                                    <div class="col-xs-10">
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-striped"
                                                 role="progressbar"
                                                 aria-valuenow="45"
                                                 aria-valuemin="0"
                                                 aria-valuemax="100"
                                                 style="width:{{ user.getCompletedPercent|round(1, 'floor') }}%">
                                                {{ user.getCompletedPercent|round(1, 'floor') }}%
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-2">
                                        <a class="text-gray"
                                                {#data-ng-class="{'icon-question-icon': !completeProfileMyBucketList, 'icon-icon-up': completeProfileMyBucketList}"#}
                                           data-ng-click="completeProfileMyBucketList=!completeProfileMyBucketList">
                                            <i class="icon-question-icon" data-ng-hide="completeProfileMyBucketList"><span class="path1"></span><span class="path2"></span></i>
                                            {#<i class="icon up-icon ng-hide" data-ng-show="completeProfileMyBucketList"></i>#}
                                            <i class="icon-icon-up ng-hide" data-ng-show="completeProfileMyBucketList"><span class="path1"></span><span class="path2"></span></i>
                                            {#<i class="icon-icon-up"><span class="path1"></span><span class="path2"></span></i>#}
                                        </a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <div class="row slide ng-hide" data-ng-cloak data-ng-show="completeProfileMyBucketList" style="display: none">
                    <div class="col-sm-6">
                        <ol style="position: relative;">
                            <li>
                                <bdi>
                                    {{ 'security.login.sign_up'|trans({}, 'FOSUserBundle') }}
                                    <i class="icon-ok-only"></i>
                                </bdi>
                                <span class="text-gray">{{ 'my_list.signed_up'|trans({}, 'FOSUserBundle') }}</span>
                            </li>
                            <li>
                                <bdi>{{ 'account.complete_text'|trans }}
                                    {% if user.registrationToken is null %}
                                        <i class="icon-ok-only"></i>
                                    {% else %}
                                        <i class="icon-question-only"></i>
                                    {% endif %}
                                </bdi>
                                <span class="text-gray">{{ 'my_list.verification'|trans({}, 'FOSUserBundle') }}</span>
                                <span class="text-gray">{{ 'my_list.confirm'|trans({}, 'FOSUserBundle') }}</span>
                            </li>
                            <li>
                                {% if user.socialPhotoLink or  user.fileName %}
                                    <bdi>{{ 'image_complete_text'|trans }}
                                        <i class="icon-ok-only"></i>
                                    </bdi>
                                {% else %}
                                    <a href="javascript:void(0)"
                                       data-ls-jquery-modal
                                       data-ls-template-url="{{ path('settings') }}"
                                       data-ls-identity="goalSettingsInCompleteModal">
                                        <strong>{{ 'image_complete_text'|trans }}</strong>
                                        <i class="icon-question-only"></i>
                                    </a>
                                {% endif %}
                                <span class="text-gray">{{ 'my_list.add_image'|trans({}, 'FOSUserBundle') }}</span>
                            </li>
                            <li>
                                <a href="{{ path('add_goal') }}">
                                    <strong>{{ 'my_bucket_list.add_goal'|trans |capitalize }}</strong>
                                    {% if user.userGoal|length > 0 %}
                                        <i class="icon-ok-only"></i>
                                    {% else %}
                                        <i class="icon-question-only"></i>
                                    {% endif %}
                                </a>
                                <span class="text-gray">{{ 'my_list.want_control'|trans({}, 'FOSUserBundle') }}</span>
                                <span class="text-gray">{{ 'my_list.follow_link'|trans({}, 'FOSUserBundle') }}</span>
                            </li>
                        </ol>

                    </div>

                    <div class="col-sm-6">
                        <ol style="position: relative" start="5">
                            <li>
                                <bdi>{{ 'deadline.complete_text'|trans }}
                                    {% if user.checkDeadLines() %}
                                        <i class="icon-ok-only"></i>
                                    {% else %}
                                        <i class="icon-question-only"></i>
                                    {% endif %}
                                </bdi>
                                <span class="text-gray">{{ 'my_list.dream_text'|trans({}, 'FOSUserBundle') }}</span>
                            </li>
                            <li>
                                <bdi>{{ 'goal.complete_text'|trans }}
                                    {% if user.checkCompletedGoals() %}
                                        <i class="icon-ok-only"></i>
                                    {% else %}
                                        <i class="icon-question-only"></i>
                                    {% endif %}
                                </bdi>
                                <span class="text-gray">{{ 'my_list.have_goal'|trans({}, 'FOSUserBundle') }}</span>
                            </li>

                            <li>
                                <bdi>{{ 'success_story.complete_text'|trans | capitalize}}
                                    {% if user.checkSuccessStory() %}
                                        <i class="icon-ok-only"></i>
                                    {% else %}
                                        <i class="icon-question-only"></i>
                                    {% endif %}
                                </bdi>
                                <span class="text-gray">{{ 'my_list.complete_goal'|trans({}, 'FOSUserBundle') }}</span>
                            </li>
                        </ol>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block content_container %}
    <div class="slide map-marker ng-hide" data-ng-cloak data-ng-hide="!showMap">
        <div data-simple-map-marker
             data-markers="{{ locations(userGoals.getItems()) | json_encode }}"
             {#data-on-marker-click="onMarkerClick(goal)"#}
             data-is-bounded="true"
             data-item-page-url="{{ app.debug ? '/app_dev.php':'' }}/goal/"
             {#data-active-marker-icon="{{ asset('bundles/app/images/map-marker-white.png') }}"#}
             data-passive-marker-icon="{{ asset('bundles/app/images/map-marker-purple.png') }}"
             data-refresh="showMap"
             class="google-map "
             style="width: 100%; height: 300px">
        </div>
    </div>
    <div class="bucketlist">
        <div class="container">
            <div class="row">
                <ul class="menu">
                    {% set dream = app.request.get('d') %}
                    {% set activeGoals = profileUser.getStats.active %}
                    {% set my_router_params =  app.request.query.all %}
                    {% set userUId = {} %}
                    {% set routeName = 'user_profile_single' %}
                    {% if profileUser.id != app.user.id %}
                        {% set userUId = {'user' : profileUser.uId} %}
                        {% set routeName = 'user_profile' %}
                    {% endif %}

                    <li {% if status == all %} class="active" {% endif %} >
                        <a  href="{{ path(routeName, my_router_params|merge(userUId)|merge({'status' : all})) }}">{{ 'menu.bucket'|trans }}</a>
                    </li>
                    <li {% if status == active %} class="active" {% endif %}>
                        <a  href="{{ path(routeName, my_router_params|merge(userUId)|merge({'status' : active})) }}">{{ 'menu.active'|trans }}</a>
                    </li>
                    <li {% if status == completed %} class="active" {% endif %}>
                        <a href="{{ path(routeName, my_router_params|merge(userUId)|merge({'status' : completed })) }}">{{ 'menu.completed'|trans }}</a>
                    </li>
                    <li class="pull-right">
                        <a href="javascript:void(0)" data-ng-class="{'text-purple': showMap}" data-ng-click="showMap=!showMap; triggerMap('.google-map')"> {{ 'menu.map'|trans }}
                            <i class="icon-icon-up" data-ng-hide="showMap"><span class="path1"></span><span class="path2"></span></i>
                            <i class="icon-scroll-down ng-hide" data-ng-show="showMap"><span class="path1"></span><span class="path2"></span></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <hr/>
        <div class="container">
            <div class="row">

                <div class="col-sm-12">
                    <form class="form-inline" action="#">
                        {# dream filter #}
                        <label class="radio-inline {% if dream %}checked-label {% endif %}">
                            <input {% if dream %} checked {% endif %} onchange="submit()" type="checkbox" name="d" value="1"> {{ 'filter.dream'|trans }}
                        </label>

                        {# other filters #}
                        {% for id, name in filters %}
                            {% set queryParameterName = "f_" ~ id %}
                            <label class="radio-inline {% if app.request.get(queryParameterName) %}checked-label {% endif %}">
                                <input {% if app.request.get(queryParameterName) %} checked {% endif %} onchange="submit()" type="checkbox" name="f_{{ id }}"> {{ name|trans }}
                            </label>
                        {% endfor %}
                    </form>
                </div>

            </div>
        </div>
    </div> <br/>

    <div class="container">
        <div class="row">
            <div class="col-md-8 goals-information">
                {% if userGoals.items %}

                    {% for userGoal in userGoals %}
                        {% set goal = userGoal.goal %}
                        {% set status = userGoal.status %}

                        {% set lastIndex = userGoals|length - 1 %}

                        {% if profileUser.id != app.user.id and not userGoal.isVisible %}

                            {#<div class="row{% if status !=  constant("AppBundle\\Entity\\UserGoal::COMPLETED") %} active-idea{% endif %}">#}
                                {#<div class="col-sm-2 no-right">#}
                                    {#<div class="date-left hidden-xs">#}
                                        {#<div class="img-circle">#}
                                            {#&#123;&#35;{{ userGoal.doDate|date('d') }}&#35;&#125;#}
                                        {#</div>#}
                                        {#{% if userGoals[lastIndex].id == userGoal.id %}#}
                                            {#<span></span>#}
                                        {#{% endif %}#}
                                        {#<div class="elipse">#}
                                            {#&#123;&#35;<div>{{ userGoal.doDate|date('M, Y') }}</div>&#35;&#125;#}
                                        {#</div>#}
                                    {#</div>#}
                                {#</div>#}
                                {#<div class="col-sm-10 bg-white no-left">#}
                                    {#<div class="row">#}
                                        {#<div class="col-sm-12 bg-white" style="height: 150px"></div>#}
                                    {#</div>#}
                                {#</div>#}
                            {#</div>#}

                        {% else %}

                            <div class="row{% if status !=  constant("AppBundle\\Entity\\UserGoal::COMPLETED") and userGoal.doDate is not null %} active-idea{% endif %}">
                                <div class="col-sm-2 no-right">
                                    <div class="date-left hidden-xs">
                                        <div class="img-circle">
                                            {% if userGoal.doDate is not null %}
                                                {{ userGoal.doDate|date('d') }}
                                            {% elseif userGoal.completionDate is not null%}
                                                {{ userGoal.completionDate|date('d') }}
                                            {% else %}
                                                <bdi class="dreaming">
                                                    <i class="icon-dreaming"></i>
                                                </bdi>
                                            {% endif %}
                                        </div>
                                        {% if userGoals[lastIndex].id == userGoal.id %}
                                            <span></span>
                                        {% endif %}
                                        <div class="elipse">
                                            <div class="text-gray">
                                                {% if userGoal.doDate is not null %}
                                                    {{ userGoal.doDate|date('M, Y') }}
                                                {% elseif userGoal.completionDate is not null%}
                                                    {{ userGoal.completionDate|date('M, Y') }}
                                                {% else %}
                                                    {{ 'dreaming'|trans }}
                                                {% endif %}
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-sm-10 bg-white no-left">
                                    <div class="row">
                                        <div class="col-sm-6 no-right">
                                            <figure>

                                                <div class="addthis_native_toolbox" data-url="{{ app.request.host }}{{ path('inner_goal', {'slug': goal.slug}) }}"></div>

                                                <a href="{{ path('inner_goal', {'slug' : goal.slug }) }}">
                                                    <span class="overlay"></span>

                                                    {% if goal.getListPhotoDownloadLink() %}
                                                        <img src="{{ goal.getListPhoto.getDownloadLink|blImageFilter('goal_bucketlist') }}" alt= "{{ goal.title }}" />
                                                    {% endif %}

                                                </a>

                                                <figcaption>
                                                    <div class="row">
                                                        <div class="col-xs-6">
                                                            {% if goal.getUsedCount.listedBy > 0 %}
                                                                <a href="{{ path('listed_users', {'slug': goal.slug }) }}">
                                                                    <span>{{ 'block_listed'|trans | capitalize }} {{ goal.getUsedCount.listedBy }}</span>
                                                                    <i class="icon-user-small"></i>
                                                                </a>
                                                            {% else %}
                                                                <span class="text-white">
                                                                    <span>{{ 'block_listed'|trans | capitalize }} {{ goal.getUsedCount.listedBy }}</span>
                                                                    <i class="icon-user-small"></i>
                                                                </span>
                                                            {% endif %}
                                                        </div>

                                                        <div class="col-xs-6">
                                                            {% if goal.getUsedCount.doneBy > 0 %}
                                                                <a href="{{ path('done_users', {'slug': goal.slug} ) }}">
                                                                    <span>{{ 'block_completed'|trans | capitalize }} {{ goal.getUsedCount.doneBy }}</span>
                                                                    <i class="icon-user-small"></i>
                                                                </a>
                                                            {% else %}
                                                                <span class="text-white">
                                                                    <span>{{ 'block_completed'|trans | capitalize }} {{ goal.getUsedCount.doneBy }}</span>
                                                                    <i class="icon-user-small"></i>
                                                                </span>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                </figcaption>
                                            </figure>
                                        </div>
                                        <div class="col-sm-6">
                                            <article class="information">
                                                <div class="row">
                                                    <div class="col-sm-12">
                                                        <h3>
                                                            <a href="{{ path('inner_goal', {'slug' : goal.slug }) }}" class="text-dark-gray">{{ goal.title }}</a>
                                                        </h3>
                                                    </div>
                                                </div>

                                                <p>{{  goal.author ? goal.author.showName : '' }} &nbsp;</p>

                                                <ul class="clearfix">
                                                    {% if userGoal.steps is not null and userGoal.steps|length > 0 %}
                                                        <li>
                                                            <i title="{{ 'my_bucket_list.notes'|trans }}"  class="icon-step-list"></i>
                                                        </li>
                                                        <li>
                                                            <div class="progress">
                                                                <div class="progress-bar progress-bar-striped"
                                                                     role="progressbar"
                                                                     aria-valuenow="45"
                                                                     aria-valuemin="0"
                                                                     aria-valuemax="100"
                                                                     style="width: {{ userGoal.getCompleted|round(1, 'floor') }}%">
                                                                    {{ userGoal.getCompleted|round(1, 'floor') }}%
                                                                </div>
                                                            </div>
                                                        </li>
                                                    {% endif %}

                                                    {% if goal.author and goal.author.id == user.id %}
                                                        <li>
                                                            <i title="{{ 'my_bucket_list.steps'|trans }}" class="icon-pencil"></i>
                                                        </li>
                                                    {% endif %}

                                                    {% if goal.author and goal.author.id == user.id and goal.status == constant('AppBundle\\Entity\\Goal::PRIVATE_PRIVACY') %}
                                                        <li>
                                                            <i title="{{ 'my_bucket_list.private'|trans }}"  class="icon-lock-white"></i>
                                                        </li>
                                                    {% endif %}


                                                    {# invisible #}
                                                    {% if not userGoal.isVisible %}
                                                        <li>
                                                            <i title="{{ 'my_bucket_list.invisible'|trans }}" class="icon-eye"></i>
                                                        </li>
                                                    {% endif %}

                                                    {# Missed deadline #}
                                                    {% if userGoal.doDate is not null and userGoal.doDate|date("m/d/Y") < "now"|date("m/d/Y") %}
                                                        <li>
                                                            <i title="{{ 'my_bucket_list.missed_deadline'|trans }}"  class="icon-info"></i>
                                                        </li>
                                                    {% endif %}
                                                </ul>
                                                {% if profileUser.id == app.user.id %}
                                                    <div class="row">
                                                        <div class="col-xs-5">
                                                            <a href="javascript:void(0)"
                                                               data-ls-jquery-modal
                                                               data-ls-template-url="{{ path('add_to_me_goal', {'id': goal.id, 'userGoalId': userGoal.id }) }}"
                                                               data-ls-identity="goalManageModal{{ goal.id }}"
                                                               class="text-gray">
                                                                <i class="icon-manage"></i>
                                                                {{ 'manage'|trans | capitalize }}
                                                            </a>

                                                        </div>

                                                        <div class="col-xs-7 text-right">
                                                            <div class="check_status" data-ng-init="success=false">

                                                                {% if status ==  constant("AppBundle\\Entity\\UserGoal::COMPLETED") %}
                                                                    <a  href="javascript:void(0)"
                                                                        data-ls-jquery-modal
                                                                        data-ls-template-url="{{ path("add_story", { 'id' : goal.id }) }}"
                                                                        data-ls-identity="goalAddSuccessStoryModal{{ goal.id }}"
                                                                        class="btn btn-transparent"
                                                                        id="successtory">
                                                                        <i class="icon ok-icon-green"></i>
                                                                        {{ 'successtory'|trans | capitalize }}
                                                                    </a>
                                                                {% else %}
                                                                    <a href="javascript:void(0)" data-ng-show="!success" data-ng-click="addDone('{{ path("done_goal", {'id' : goal.id }) }}', 'addSuccesstory{{ goal.id }}')" class="btn btn-transparent" id="done">
                                                                        <i class="icon done-icon"></i>

                                                                        {{ 'done'|trans | capitalize }}
                                                                    </a>
                                                                    <a  href="javascript:void(0)"
                                                                        data-ng-show="success"
                                                                        data-ls-jquery-modal
                                                                        data-ls-template-url="{{ path("add_story", { 'id' : goal.id }) }}"
                                                                        data-ls-identity="goalAddSuccessStoryModal{{ goal.id }}"
                                                                        class="btn btn-transparent"
                                                                        id="addSuccesstory{{ goal.id }}">
                                                                        <i class="icon ok-icon-green"></i>
                                                                        {{ 'successtory'|trans | capitalize }}
                                                                    </a>
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            </article>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                {% else %}

                    <p class="empty-text">

                        {% if activeGoals == 0 %}
                            {% set link = path('goals_list') %}
                        {% else %}
                            {% set link = path('user_profile_single', {'status': active }) %}
                        {% endif %}

                        {% if dream %}
                            {{ 'dream'|trans }}
                        {% elseif app.request.get('f_1') or app.request.get('f_2') or app.request.get('f_3') or app.request.get('f_4') %}
                            {{ 'my_bucket_list.filter'|trans }}
                        {% elseif status == completed %}
                            {{ 'my_bucket_list.complete'|trans }} <a href="{{ link }}" class="text-purple">{{ 'my_bucket_list.some_goal'|trans }}</a>
                        {% elseif status == active %}
                            {{ 'my_bucket_list.need_goal'|trans }} <a href="{{ path('goals_list') }}" class="text-purple">{{ 'my_bucket_list.add_some'|trans }}</a>
                        {% else %}
                            {{ 'my_bucket_list.doing_here'|trans }} <a href="{{ path('goals_list') }}" class="text-purple">{{ 'my_bucket_list.add_goal'|trans }}</a>
                        {% endif %}
                    </p>

                {% endif %}

                <div class="navigation">
                    {{ knp_pagination_render(userGoals) }}
                </div>
            </div>

            <div class="col-md-4">
                <div class="right-block">
                    <div class="right-menu">
                        <div class="row">
                            <div class="col-xs-8">
                                <a href="{{ path('add_goal') }}">
                                    <i class="icon-creat-icon"></i>
                                    <bdi>{{ 'right_menu.create'|trans }}</bdi>
                                </a>
                            </div>
                            <div class="col-xs-4 text-right">
                                {% if profileUser.id == app.user.id %}
                                    <a href="{{ path('goal_drafts') }}">
                                        <bdi>{{ 'right_menu.draft'|trans }} {{ draftsCount }}</bdi>

                                    </a>
                                {% endif %}
                            </div>
                        </div>
                        <hr/>

                        <div class="row padding-top">
                            <div class="col-xs-9">
                                <span>
                                    <i class="icon-suggest-icon"></i>
                                    <a href="{{ path("goals_list") }}"> {{ 'right_menu.suggested'|trans }}</a>
                                </span>
                            </div>
                            {#<div class="col-xs-3 text-right">#}
                            {#<a href="{{ path("goals_list") }}">{{ 'right_menu.show'|trans }}</a>#}
                            {#</div>#}
                        </div>

                        <hr/>
                    </div>
                    <div class="row">
                        {%  include "AppBundle:Blocks:popularGoals.html.twig" with {'user': user, 'count': 2}  %}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}


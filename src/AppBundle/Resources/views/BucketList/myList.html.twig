{% extends "AppBundle::layout_top.html.twig" %}

{% block angularApp %}
    <html data-ng-app="goal">
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('app/bower_components/jquery-modal/jquery.modal.css') }}" rel="stylesheet">
    <link href="{{ asset('app/bower_components/icheck/skins/all.css') }}" rel="stylesheet">
    <link href="{{ asset('app/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css') }}"
          rel="stylesheet">
    <link href="{{ asset('bundles/app/less/taggle_button.css') }}" rel="stylesheet">
    <style>
        html {
            overflow-y: auto !important;
        }
    </style>
{% endblock %}

{% block content_header %}

    {% set stats = profileUser.getStats %}

    {% set lastName = profileUser.lastName %}
    {% set firstName = profileUser.firstName %}
    {% set nameOnImage = firstName|slice(0,1) ~ lastName|slice(0,1) %}
    {% set className = "profile-image profile-no" ~ random(4) %}

    <div class="content-header">
        <figure>
            <img src="{{ profileUser.getPhotoLink }}" alt="Some image" class="img-responsive" />
        </figure>

        <div class="profile">
            <div class="container">
                <div class="row">

                    <div class="col-md-4">
                        <figure>
                            <div>
                                {% if profileUser.getPhotoLink %}
                                     <img src="{{ profileUser.getPhotoLink }}" alt="" class="img-responsive img-circle"/>
                                {% else %}
                                     <span class="{{ className }}">{{ nameOnImage }}</span>
                                {% endif %}
                            </div>

                            <figcaption>
                                <ul>
                                    <li>
                                        <span>{{ 'user_goal.active'|trans }}</span>
                                        <span>{{ stats.active }}</span>
                                    </li>

                                    <li>
                                        <span>{{ 'listed_by'|trans }}</span>
                                        <span>{{ stats.listedBy }}</span>
                                    </li>

                                    <li>
                                        <span>{{ 'done'|trans |capitalize }}</span>
                                        <span>{{ stats.doneBy }}</span>
                                    </li>
                                </ul>
                            </figcaption>
                        </figure>
                    </div>

                    <div class="col-md-4">
                        <h1 class="bg-blue">{{ profileUser.showName }}</h1>
                        {% if  profileUser.getAge  %}
                            <p>{{ profileUser.getAge }} {{ "my_bucket_list.year_old"|trans }}</p>
                        {% endif %}
                    </div>

                    {# TODO: need for design changes #}
                    {% if profileUser.id == app.user.id %}
                        <div class="col-md-4">
                            <a href="{{ path("settings") }}" class="pull-right">
                                <span class="glyphicon glyphicon-cog"></span>
                            </a>

                            <div class="absolute clearfix" style="margin-top:250px;">
                                <i>{{ 'complete_message'|trans }}</i>
                                <div class="progress">
                                    <div class="progress-bar progress-bar-striped aktive" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width:{{ user.getCompletedPercent }}%">
                                        <span class="sr-only">45% Complete</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}

                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block content_container %}
    <div class="slide" data-ng-hide="!showMap">
        <div data-simple-map-marker
            data-markers="{{ locations(userGoals) | json_encode }}"
            data-on-marker-click="onMarkerClick(goal)"
            class="google-map"
            style="width: 100%; height: 300px">
        </div>
    </div>
    <div class="bucketlist">
        <div class="container">
            <div class="row">
                <ul class="menu">
                    {% set status = app.request.get('status') %}
                    {% set active = constant("AppBundle\\Entity\\UserGoal::ACTIVE") %}
                    {% set completed = constant("AppBundle\\Entity\\UserGoal::COMPLETED") %}
                    {% set all = 0 %}
                    {% set dream = app.request.get('d') %}

                    {% if dream %}
                        <p>{{ 'dream'|trans }}</p>
                    {% endif %}


                    {% set my_router_params =  app.request.query.all %}
                    {% set userId = {} %}
                    {% if profileUser.id != app.user.id %}
                        {% set userId = {'user' : profileUser.id} %}
                    {% endif %}

                    <li {% if status == all %} class="active" {% endif %} >
                        <a  href="{{ path('user_profile', my_router_params|merge({'status' : all})|merge(userId)) }}">{{ 'menu.bucket'|trans }}</a>
                    </li>
                    <li {% if status == active %} class="active" {% endif %}>
                        <a  href="{{ path('user_profile', my_router_params|merge({'status' : active})|merge(userId)) }}">{{ 'menu.active'|trans }}</a>
                    </li>
                    <li {% if status == completed %} class="active" {% endif %}>
                        <a href="{{ path('user_profile', my_router_params|merge({'status' : completed })|merge(userId)) }}">{{ 'menu.completed'|trans }}</a>
                    </li>
                    <li class="pull-right">
                        <a href="javascript:void(0)" data-ng-click="showMap=!showMap; triggerMap('.google-map')"> {{ 'menu.map'|trans }}
                            <span class="glyphicon glyphicon-chevron-up" data-ng-hide="showMap"></span>
                            <span class="glyphicon glyphicon-chevron-down ng-hide" data-ng-show="showMap"></span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <hr/>
        <div class="container">
            <div class="row">

                <div class="col-md-10">
                    <form class="form-inline" action="#">

                        {# dream filter #}
                        <label class="radio-inline">
                            <input {% if dream %} checked {% endif %} onclick="submit()" type="checkbox" name="d" value="1"> {{ 'filter.dream'|trans }}
                        </label>

                        {# other filters #}
                        {% for id, name in filters %}
                            {% set queryParameterName = "f_" ~ id %}
                            <label class="radio-inline">
                                <input {% if app.request.get(queryParameterName) %} checked {% endif %} onclick="submit()" type="checkbox" name="f_{{ id }}"> {{ name|trans }}
                            </label>
                        {% endfor %}
                    </form>
                </div>

                <div class="col-md-2 mail-print">
                    <a href="javascript:void(0)">
                        <span class="glyphicon glyphicon-print"></span>
                    </a>
                    <a href="javascript:void(0)">
                        <span class="glyphicon glyphicon-envelope"></span>
                    </a>
                </div>
            </div>
        </div>
    </div> <br/>

    <div class="container goals-information" >
        <div class="row">
            <div class="col-md-8">
                {% if userGoals %}
                    {% for userGoal in userGoals %}
                    {% set goal = userGoal.goal %}

                        {% if profileUser.id != app.user.id and not userGoal.isVisible %}

                            <div class="row">
                                <div class="col-sm-2 no-right">
                                    <div class="date-left hidden-xs">
                                        <div class="img-circle">
                                            {#{{ userGoal.doDate|date('d') }}#}
                                        </div>
                                        <div class="elipse">
                                            {#<div>{{ userGoal.doDate|date('M, Y') }}</div>#}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-10 bg-white no-left">
                                    <div class="row">
                                        <div class="col-md-12 bg-white" style="height: 150px"></div>
                                    </div>
                                </div>
                            </div>

                        {% else %}

                            <div class="row">
                                <div class="col-sm-2 no-right">
                                    <div class="date-left hidden-xs">
                                        <div class="img-circle">
                                            {{ userGoal.doDate|date('d') }}
                                        </div>
                                        <div class="elipse">
                                            <div>{{ userGoal.doDate|date('M, Y') }}</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-10 bg-white no-left">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <figure>
                                                <a href="{{ path('inner_goal', {'id' : goal.id }) }}">
                                                    <img src="{{ goal.getListPhoto ? goal.getListPhoto.getDownloadLink : null }}" alt= "{{ goal.title }}" class="img-responsive" />
                                                </a>
                                                <figcaption>
                                                    <div class="row">
                                                        <div class="col-sm-6">
                                                            <a href="javascript:void(0)">
                                                                {{ 'listed_by'|trans | upper }}
                                                                <span>{{ goal.getUsedCount.listedBy }}</span>
                                                                <span class="glyphicon glyphicon-user"></span>
                                                            </a>
                                                        </div>

                                                        <div class="col-sm-6">
                                                            <a href="javascript:void(0)">
                                                                {{ 'done_by'|trans | upper }}
                                                                <span>{{ goal.getUsedCount.doneBy }}</span>
                                                                <span class="glyphicon glyphicon-user"></span>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </figcaption>
                                            </figure>
                                        </div>
                                        <div class="col-md-6">
                                            <article class="information">
                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        <h3><a href="{{ path('inner_goal', {'id' : goal.id }) }}">{{ goal.title }}</a></h3>
                                                    </div>
                                                    <div class="col-sm-6 pull-right">
                                                        <div class="addthis_native_toolbox"></div>
                                                    </div>
                                                </div>

                                                <p>{{ goal.author.showName|default(null)  }}</p>
                                                <ul class="clearfix">
                                                    <li>
                                                        {#{% if userGoal.note is not null %}#}
                                                            {#&#123;&#35;{% set to passiv %}&#35;&#125;#}
                                                        {#{% endif %}#}
                                                        <span title="{{ 'my_bucket_list.notes'|trans }}"  class="glyphicon glyphicon-list-alt"></span>
                                                        <span title="{{ 'my_bucket_list.steps'|trans }}"  class="glyphicon glyphicon-list-alt"></span>
                                                    </li>
                                                    <li>
                                                        <div class="progress">
                                                            <div class="progress-bar progress-bar-striped {% if userGoal.steps|length > 0 %} aktive{% endif %}" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: {{ userGoal.getCompleted }}%">
                                                                <span class="sr-only">45% Complete</span>
                                                            </div>
                                                        </div>
                                                    </li>


                                                    {% if goal.author and goal.author.id == user.id %}
                                                        <li>
                                                            <span title="{{ 'my_bucket_list.private'|trans }}" class="glyphicon glyphicon-pencil"></span>
                                                        </li>
                                                    {% endif %}

                                                    {# invisible #}
                                                    {% if not userGoal.isVisible %}
                                                        <li>
                                                            <span title="{{ 'my_bucket_list.invisible'|trans }}" class="glyphicon glyphicon-eye-close"></span>
                                                        </li>
                                                    {% endif %}

                                                    {# Missed deadline #}
                                                    {% if userGoal.doDate is not null and userGoal.doDate|date("m/d/Y") < "now"|date("m/d/Y") %}
                                                        <li>
                                                            <span title="{{ 'my_bucket_list.missed_deadline'|trans }}"  class="glyphicon glyphicon-off"></span>
                                                        </li>
                                                    {% endif %}

                                                </ul>
                                                {% if profileUser.id == app.user.id %}
                                                    <div class="row">
                                                        <div class="col-sm-6">
                                                            <a href="javascript:void(0)" class="open-form-modal">
                                                                <span class="glyphicon glyphicon-cog"></span>
                                                                {{ 'manage'|trans }}
                                                            </a>

                                                            <div class="form-modal" data-ng-controller="goalEnd" style="width: auto; margin-top: 80px;display: none">
                                                                {{ render(controller("AppBundle:Goal:manage", {'id' : goal.id , 'userGoalId' : userGoal.id})) }}
                                                            </div>

                                                        </div>

                                                        <div class="col-sm-6 text-right" id="check_status">

                                                            {% set status = userGoal.status %}
                                                            {% if status == constant("AppBundle\\Entity\\UserGoal::COMPLETED") %}
                                                                <a href="{{ path("add_story", { 'id' : goal.id }) }}" class="border" id="successtory">
                                                                    <span class="glyphicon glyphicon-ok-circle green-bg"></span>
                                                                    {{ 'successtory'|trans }}
                                                                </a>
                                                            {% else %}
                                                                <a href="{{ path("done_goal", {'id' : goal.id }) }}" class="border" id="done">
                                                                    <span class="glyphicon glyphicon-ok-circle"></span>
                                                                    {{ 'done'|trans }}
                                                                </a>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            </article>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                {% else %}

                    {% if status ==  completed %}
                        {{ 'my_bucket_list.complete'|trans }}
                    {% elseif status == active %}
                        {{ 'my_bucket_list.need_goal'|trans }} <a href="{{ path('goals_list') }}">{{ 'my_bucket_list.add_some'|trans }}</a>
                    {% else %}
                        {{ 'my_bucket_list.doing_here'|trans }} <a href="{{ path('add_goal') }}">{{ 'my_bucket_list.add_goal'|trans }}</a>
                    {% endif %}
                {% endif %}

                <div class="navigation">
                    {{ knp_pagination_render(userGoals) }}
                </div>
            </div>

            <div class="col-md-4">
                <ul class="right-block">
                    <li class="clearfix">
                        <a href="{{ path('add_goal') }}">{{ 'right_menu.create'|trans }}</a>
                        <a href="{{ path('goal_drafts') }}">{{ 'right_menu.draft'|trans }}
                            <span>{{ draftsCount }}</span>
                        </a>
                    </li>
                    <li class="clearfix">
                        <span>{{ 'right_menu.ideas'|trans }}</span>
                        <a href="{{ path("goals_list") }}">{{ 'right_menu.show'|trans }}</a>
                    </li>
                    <li>
                        {%  include "AppBundle:Blocks:popularGoals.html.twig" with {'user': user, 'count': 2}  %}
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}

    <script src="{{ asset("app/bower_components/jquery-modal/jquery.modal.min.js") }}" type="text/javascript"></script>
    <script src="{{ asset("app/bower_components/icheck/icheck.min.js") }}" type="text/javascript"></script>
    <script src="{{ asset("app/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js") }}"
            type="text/javascript"></script>
    <script src="{{ asset('bundles/app/js/angular/goal.js') }}" type="text/javascript"></script>

    <script>
        $(document).ready(function(){
            $(".open-form-modal").click(function(){
                var link = $(this);
                var modal = $(this).next();

                modal.show();
                modal.modal({
                    fadeDuration: 500
                });

                modal.on($.modal.CLOSE, function(){
                    link.after(modal);
                    modal.hide();
                });
            })
        });
    </script>
{% endblock %}
{% extends "AppBundle::layout_top.html.twig" %}

{% block angularApp %}
    <html data-ng-app="goal" data-ng-controller="goalMyBucketList">
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('app/bower_components/dropzone/downloads/css/dropzone.css') }}" rel="stylesheet">
    <style>
        html {
            overflow-y: auto !important;
        }
    </style>
{% endblock %}

{%- block title -%}
    {{ 'my_bucket_list.title'|trans }}
{%- endblock -%}

{%- block og_title -%}
    {{ 'my_bucket_list.title'|trans }}
{%- endblock -%}

{%- block og_description -%}
    {{ 'my_bucket_list.description'|trans }}
{%- endblock -%}

{%- block og_image -%}
    {% set images = profileUser.getPhotoLink %}
    {%- if images -%}
        {{- host ~ images -}}
    {% else %}
        {{ parent() }}
    {%- endif -%}
{%- endblock -%}

{%- block meta_description -%}
    {{ 'my_bucket_list.description'|trans }}
{%- endblock -%}

{%- block og_url -%}
    {{- app.request.uri }}
{%- endblock -%}

{% block content_header %}

    {% set stats = profileUser.getStats %}

    {% set lastName = profileUser.lastName %}
    {% set firstName = profileUser.firstName %}
    {% set nameOnImage = firstName|slice(0,1) ~ lastName|slice(0,1) %}
    {% set className = "profile-image profile-no" ~ random(4) %}
    {% set imgPath ='bundles/app/images/cover' ~ random(4) ~ '.png' %}

    <div class="content-header">
        <figure>
            <img src="
            {% if profileUser.getPhotoLink %}
                {{ profileUser.getPhotoLink }}
            {% else %}
                {{ asset(imgPath) }}
            {% endif %}"
                 alt="Profile Cover Photo" class="img-responsive" />
        </figure>

        <div class="profile">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <figure>
                            <div>
                                {% if profileUser.getPhotoLink %}
                                     <img src="{{ profileUser.getPhotoLink }}" alt="Profile image" class="img-responsive img-circle"/>
                                {% else %}
                                     <span class="{{ className }}">{{ nameOnImage }}</span>
                                {% endif %}
                            </div>

                            <figcaption>
                                <ul>
                                    <li>
                                        <span>{{ 'user_goal.active'|trans | capitalize }}</span>
                                        <span>{{ stats.active }}</span>
                                    </li>

                                    <li>
                                        <span>{{ 'block_listed'|trans | capitalize }}</span>
                                        <span>{{ stats.listedBy }}</span>
                                    </li>

                                    <li>
                                        <span>{{ 'block_completed'|trans |capitalize }}</span>
                                        <span>{{ stats.doneBy }}</span>
                                    </li>
                                </ul>
                            </figcaption>
                        </figure>
                    </div>
                    <div class="col-md-4">
                        <h1 class="bg-blue {% if profileUser.showName|length > 12 %}title-smaller{% endif %}">{{ profileUser.showName }}</h1>
                        {% if  profileUser.getAge  %}
                            <p>{{ profileUser.getAge }} {{ "my_bucket_list.year_old"|trans }}</p>
                        {% endif %}
                    </div>

                    {% if profileUser.id == app.user.id %}
                        <div class="col-md-4">
                            <a href="javascript:void(0)"
                               data-ls-identity="settingModalInMyBucketList"
                               data-ls-template-url="{{ path("settings") }}"
                               data-ls-jquery-modal
                               class="pull-right">
                                <i class="icon icon-cog"></i>
                            </a>

                            <div class="absolute clearfix" style="margin-top:170px;width: 100%">
                                <i>{{ 'complete_message'|trans }}</i>

                                <div class="row">
                                    <div class="col-xs-9">
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-striped"
                                                 role="progressbar"
                                                 aria-valuenow="45"
                                                 aria-valuemin="0"
                                                 aria-valuemax="100"
                                                 style="width:{{ user.getCompletedPercent|round(1, 'floor') }}%">
                                                {{ user.getCompletedPercent|round(1, 'floor') }}%
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-2">
                                        <a class="icon question-icon-circle text-gray"
                                           data-ng-class="{'question-icon-circle': !completeProfileMyBucketList, 'up-icon': completeProfileMyBucketList}"
                                           data-ng-click="completeProfileMyBucketList=!completeProfileMyBucketList">
                                        </a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <div class="row">

                    <div class="col-sm-6">
                        <ol class="slide" data-ng-show="completeProfileMyBucketList" style="position: relative;">
                            <li>
                                <a href="javascript:void(0)">
                                    {{ 'security.login.sign_up'|trans({}, 'FOSUserBundle') }}
                                    <i class="icon icon-ok"></i>
                                </a>
                                <span class="text-gray">{{ 'my_list.signed_up'|trans({}, 'FOSUserBundle') }}</span>
                            </li>
                            <li>
                                <a href="javascript:void(0)">{{ 'account.complete_text'|trans }}
                                    {% if user.registrationToken is null %}
                                        <i class="icon icon-ok"></i>
                                    {% else %}
                                        <i class="icon question-icon"></i>
                                    {% endif %}
                                </a>
                                <span class="text-gray">{{ 'my_list.verification'|trans({}, 'FOSUserBundle') }}</span>
                                <span class="text-gray">{{ 'my_list.confirm'|trans({}, 'FOSUserBundle') }}</span>
                            </li>
                            <li>
                                <a href="javascript:void(0)"
                                   data-ls-jquery-modal
                                   data-ls-template-url="{{ path('settings') }}"
                                   data-ls-identity="goalSettingsInCompleteModal">
                                    <strong>{{ 'image_complete_text'|trans }}</strong>
                                    {% if user.socialPhotoLink or  user.fileName %}
                                        <i class="icon icon-ok"></i>
                                    {% else %}
                                        <i class="icon question-icon"></i>
                                    {% endif %}
                                </a>
                                <span class="text-gray">{{ 'my_list.add_image'|trans({}, 'FOSUserBundle') }}</span>
                            </li>
                            <li>
                                <a href="{{ path('add_goal') }}">
                                    <strong>{{ 'my_bucket_list.add_goal'|trans |capitalize }}</strong>
                                    {% if user.userGoal|length > 0 %}
                                        <i class="icon icon-ok"></i>
                                    {% else %}
                                        <i class="icon question-icon"></i>
                                    {% endif %}
                                </a>
                                <span class="text-gray">{{ 'my_list.want_control'|trans({}, 'FOSUserBundle') }}</span>
                                <span class="text-gray">{{ 'my_list.follow_link'|trans({}, 'FOSUserBundle') }}</span>
                            </li>
                        </ol>

                    </div>

                    <div class="col-sm-6">
                        <ol class="slide" data-ng-show="completeProfileMyBucketList" style="position: relative" start="5">
                            <li>
                                <a href="javascript:void(0)">{{ 'deadline.complete_text'|trans }}
                                    {% if user.checkDeadLines() %}
                                        <i class="icon icon-ok"></i>
                                    {% else %}
                                        <i class="icon question-icon"></i>
                                    {% endif %}
                                </a>
                                <span class="text-gray">{{ 'my_list.dream_text'|trans({}, 'FOSUserBundle') }}</span>
                            </li>
                            <li>
                                <a href="javascript:void(0)">{{ 'goal.complete_text'|trans }}
                                    {% if user.checkCompletedGoals() %}
                                        <i class="icon icon-ok"></i>
                                    {% else %}
                                        <i class="icon question-icon"></i>
                                    {% endif %}
                                </a>
                                <span class="text-gray">{{ 'my_list.have_goal'|trans({}, 'FOSUserBundle') }}</span>
                            </li>

                            <li>
                                <a href="javascript:void(0)">{{ 'success_story.complete_text'|trans }}
                                    {% if user.checkSuccessStory() %}
                                        <i class="icon icon-ok"></i>
                                    {% else %}
                                        <i class="icon question-icon"></i>
                                    {% endif %}
                                </a>
                                <span class="text-gray">{{ 'my_list.complete_goal'|trans({}, 'FOSUserBundle') }}</span>
                            </li>
                        </ol>

                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}

{% block content_container %}
    <div class="slide" data-ng-hide="!showMap">
        <div data-simple-map-marker
            data-markers="{{ locations(userGoals.getItems()) | json_encode }}"
            data-on-marker-click="onMarkerClick(goal)"
            data-active-marker-icon="{{ asset('bundles/app/images/map-marker-white.png') }}"
            data-passive-marker-icon="{{ asset('bundles/app/images/map-marker-purple.png') }}"
            data-refresh="showMap"
            class="google-map"
            style="width: 100%; height: 300px">
        </div>
    </div>
    <div class="bucketlist">
        <div class="container">
            <div class="row">
                <ul class="menu">
                    {% set status = app.request.get('status') %}
                    {% set active = constant("AppBundle\\Entity\\UserGoal::ACTIVE") %}
                    {% set completed = constant("AppBundle\\Entity\\UserGoal::COMPLETED") %}
                    {% set all = 0 %}
                    {% set dream = app.request.get('d') %}

                    {% if dream %}
                        <p>{{ 'dream'|trans }}</p>
                    {% endif %}

                    {% set my_router_params =  app.request.query.all %}
                    {% set userId = {} %}
                    {% if profileUser.id != app.user.id %}
                        {% set userId = {'user' : profileUser.id} %}
                    {% endif %}

                    <li {% if status == all %} class="active" {% endif %} >
                        <a  href="{{ path('user_profile', my_router_params|merge({'status' : all})|merge(userId)) }}">{{ 'menu.bucket'|trans }}</a>
                    </li>
                    <li {% if status == active %} class="active" {% endif %}>
                        <a  href="{{ path('user_profile', my_router_params|merge({'status' : active})|merge(userId)) }}">{{ 'menu.active'|trans }}</a>
                    </li>
                    <li {% if status == completed %} class="active" {% endif %}>
                        <a href="{{ path('user_profile', my_router_params|merge({'status' : completed })|merge(userId)) }}">{{ 'menu.completed'|trans }}</a>
                    </li>
                    <li class="pull-right">
                        <a href="javascript:void(0)" data-ng-click="showMap=!showMap; triggerMap('.google-map')"> {{ 'menu.map'|trans }}
                            <i class="icon up-icon" data-ng-hide="showMap"></i>
                            <i class="icon down-icon ng-hide" data-ng-show="showMap"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <hr/>
        <div class="container">
            <div class="row">

                <div class="col-sm-10">
                    <form class="form-inline" action="#">

                        {# dream filter #}
                        <label class="radio-inline {% if dream %}checked-label {% endif %}">
                            <input {% if dream %} checked {% endif %} onchange="submit()" type="checkbox" name="d" value="1"> {{ 'filter.dream'|trans }}
                        </label>

                        {# other filters #}
                        {% for id, name in filters %}
                            {% set queryParameterName = "f_" ~ id %}
                            <label class="radio-inline {% if app.request.get(queryParameterName) %}checked-label {% endif %}">
                                <input {% if app.request.get(queryParameterName) %} checked {% endif %} onchange="submit()" type="checkbox" name="f_{{ id }}"> {{ name|trans }}
                            </label>
                        {% endfor %}
                    </form>
                </div>

                <div class="col-sm-2 mail-print">
                    <a href="javascript:void(0)">
                        <i class="icon print-icon"></i>
                    </a>
                    <a href="javascript:void(0)">
                        <i class="icon envelope-icon"></i>
                    </a>
                </div>
            </div>
        </div>
    </div> <br/>

    <div class="container goals-information">
        <div class="row">
            <div class="col-sm-8">
                {% if userGoals.items %}
                    {% for userGoal in userGoals %}
                    {% set goal = userGoal.goal %}
                    {% set status = userGoal.status %}

                        {% set lastIndex = userGoals|length - 1 %}
                        {% if userGoals[lastIndex].id == userGoal.id %}
                            {# TODO: #}
                        {% endif %}

                        {% if profileUser.id != app.user.id and not userGoal.isVisible %}

                            <div class="row{% if status != constant("AppBundle\\Entity\\UserGoal::COMPLETED") %} active-idea{% endif %}">
                                <div class="col-sm-2 no-right">
                                    <div class="date-left hidden-xs">
                                        <div class="img-circle">
                                            {#{{ userGoal.doDate|date('d') }}#}
                                        </div>
                                        <div class="elipse">
                                            {#<div>{{ userGoal.doDate|date('M, Y') }}</div>#}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-10 bg-white no-left">
                                    <div class="row">
                                        <div class="col-md-12 bg-white" style="height: 150px"></div>
                                    </div>
                                </div>
                            </div>

                        {% else %}

                            <div class="row{% if status != constant("AppBundle\\Entity\\UserGoal::COMPLETED") and userGoal.doDate is not null %} active-idea{% endif %}">
                                <div class="col-sm-2 no-right">
                                    <div class="date-left hidden-xs">
                                        <div class="img-circle">
                                            {% if userGoal.doDate is not null %}
                                                {{ userGoal.doDate|date('d') }}
                                            {% else %}
                                                <i class="icon dreaming-icon"></i>
                                            {% endif %}
                                        </div>
                                        <div class="elipse">
                                            <div class="text-gray">
                                                {% if userGoal.doDate is not null %}
                                                    {{ userGoal.doDate|date('M, Y') }}
                                                {% else %}
                                                    Dreaming
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-10 bg-white no-left">
                                    <div class="row">
                                        <div class="col-md-6 no-right">
                                            <figure>

                                                <a href="{{ path('inner_goal', {'slug' : goal.slug }) }}">
                                                    <span class="overlay"></span>
                                                    <img src="{{ goal.getListPhoto ? goal.getListPhoto.getDownloadLink : null }}" alt= "{{ goal.title }}" class="img-responsive" />
                                                </a>
                                                <figcaption>
                                                    <div class="row">
                                                        <div class="col-sm-6">
                                                            <a href="javascript:void(0)">
                                                                {{ 'block_listed'|trans | upper }}
                                                                <span>{{ goal.getUsedCount.listedBy }}</span>
                                                                <i class="icon user-icon"></i>
                                                            </a>
                                                        </div>

                                                        <div class="col-sm-6">
                                                            <a href="javascript:void(0)">
                                                                {{ 'block_completed'|trans | upper }}
                                                                <span>{{ goal.getUsedCount.doneBy }}</span>
                                                                <i class="icon user-icon"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </figcaption>
                                            </figure>
                                        </div>
                                        <div class="col-md-6">
                                            <article class="information">
                                                <div class="row">
                                                    <div class="col-sm-7">
                                                        <h3>
                                                            <a href="{{ path('inner_goal', {'slug' : goal.slug }) }}" class="text-dark-gray">{{ goal.title }}</a>
                                                        </h3>
                                                    </div>
                                                    <div class="col-sm-5 pull-right">
                                                        <div class="addthis_native_toolbox" data-url="{{ app.request.host }}{{ path('inner_goal', {'slug': goal.slug}) }}"></div>
                                                    </div>
                                                </div>

                                                <p>{{ goal.author.showName|default(null)  }}</p>
                                                <ul class="clearfix">
                                                    <li>
                                                        {#{% if userGoal.note is not null %}#}
                                                            {#&#123;&#35;{% set to passiv %}&#35;&#125;#}
                                                        {#{% endif %}#}
                                                        <i title="{{ 'my_bucket_list.notes'|trans }}"  class="icon list-icon"></i>

                                                    </li>

                                                    {% if userGoal.steps is not null and userGoal.steps|length > 0 %}
                                                        <li>
                                                            <div class="progress">
                                                                <div class="progress-bar progress-bar-striped"
                                                                     role="progressbar"
                                                                     aria-valuenow="45"
                                                                     aria-valuemin="0"
                                                                     aria-valuemax="100"
                                                                     style="width: {{ userGoal.getCompleted|round(1, 'floor') }}%">
                                                                    {{ userGoal.getCompleted|round(1, 'floor') }}%
                                                                </div>
                                                            </div>
                                                        </li>
                                                    {% endif %}

                                                    {% if goal.author and goal.author.id == user.id %}
                                                        <li>
                                                            <i title="{{ 'my_bucket_list.steps'|trans }}" class="icon pen-icon"></i>
                                                        </li>
                                                    {% endif %}

                                                    {% if goal.author and goal.author.id == user.id and goal.status == constant('AppBundle\\Entity\\Goal::PRIVATE_PRIVACY') %}
                                                        <li>
                                                            <i title="{{ 'my_bucket_list.private'|trans }}"  class="icon lock-icon"></i>
                                                        </li>
                                                    {% endif %}


                                                    {# invisible #}
                                                    {% if not userGoal.isVisible %}
                                                        <li>
                                                            <i title="{{ 'my_bucket_list.invisible'|trans }}" class="icon eye-icon"></i>
                                                        </li>
                                                    {% endif %}

                                                    {# Missed deadline #}
                                                    {% if userGoal.doDate is not null and userGoal.doDate|date("m/d/Y") < "now"|date("m/d/Y") %}
                                                        <li>
                                                            <i title="{{ 'my_bucket_list.missed_deadline'|trans }}"  class="icon off-icon"></i>
                                                        </li>
                                                    {% endif %}

                                                </ul>
                                                {% if profileUser.id == app.user.id %}
                                                    <div class="row">
                                                        <div class="col-sm-5">
                                                            <a href="javascript:void(0)"
                                                               data-ls-jquery-modal
                                                               data-ls-template-url="{{ path('add_to_me_goal', {'id': goal.id, 'userGoalId': userGoal.id }) }}"
                                                               data-ls-identity="goalManageModal{{ goal.id }}"
                                                               class="text-gray">
                                                                <i class="icon cog-icon"></i>
                                                                {{ 'manage'|trans }}
                                                            </a>

                                                        </div>

                                                        <div class="col-sm-7 text-right">
                                                            <div class="check_status">

                                                                {% if status == constant("AppBundle\\Entity\\UserGoal::COMPLETED") %}
                                                                    <a  href="javascript:void(0)"
                                                                        data-ls-jquery-modal
                                                                        data-ls-template-url="{{ path("add_story", { 'id' : goal.id }) }}"
                                                                        data-ls-identity="goalAddSuccessStoryModal{{ goal.id }}"
                                                                        class="btn btn-transparent"
                                                                        id="successtory">
                                                                        <i class="icon ok-icon-green"></i>
                                                                        {{ 'successtory'|trans | upper }}
                                                                    </a>
                                                                {% else %}
                                                                    <a href="{{ path("done_goal", {'id' : goal.id }) }}" class="btn btn-transparent" id="done">
                                                                        <i class="icon done-icon"></i>
                                                                        {{ 'done'|trans }}
                                                                    </a>
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            </article>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                {% else %}

                    {% if status ==  completed %}
                        {{ 'my_bucket_list.complete'|trans }}
                    {% elseif status == active %}
                        {{ 'my_bucket_list.need_goal'|trans }} <a href="{{ path('goals_list') }}">{{ 'my_bucket_list.add_some'|trans }}</a>
                    {% else %}
                        {{ 'my_bucket_list.doing_here'|trans }} <a href="{{ path('add_goal') }}">{{ 'my_bucket_list.add_goal'|trans }}</a>
                    {% endif %}
                {% endif %}

                <div class="navigation">
                    {{ knp_pagination_render(userGoals) }}
                </div>
            </div>

            <div class="col-sm-4">
                <div class="right-block">
                    <div class="row">
                        <div class="col-sm-6">
                            <a href="{{ path('add_goal') }}">
                                <i class="icon create-icon"></i>
                                {{ 'right_menu.create'|trans }}
                            </a>
                        </div>
                        <div class="col-sm-6 text-right">
                            {% if profileUser.id == app.user.id %}
                                <a href="{{ path('goal_drafts') }}">{{ 'right_menu.draft'|trans }}
                                    <span>{{ draftsCount }}</span>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                    <hr/>

                    <div class="row padding-top">
                        <div class="col-sm-9">
                            <span>
                                <i class="icon suggested-icon"></i>
                                {{ 'right_menu.suggested'|trans }}
                            </span>

                        </div>
                        <div class="col-sm-3 text-right">
                            <a href="{{ path("goals_list") }}">{{ 'right_menu.show'|trans }}</a>
                        </div>
                    </div>

                    <hr/>

                    <div class="row no-gutter">
                        <div class="col-sm-12">
                            {%  include "AppBundle:Blocks:popularGoals.html.twig" with {'user': user, 'count': 2}  %}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts output='js/app_mybucketlist.js'
        'app/bower_components/dropzone/downloads/dropzone.min.js'
        'bundles/app/js/storyImages.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script>
        $(document).ready(function(){

            $('input[type=checkbox]').iCheck({
                checkboxClass: 'icheckbox_square-purple',
                increaseArea: '20%'
            }).on('ifChanged', function (event) {
                $(event.target).trigger('change');
            });
        });
    </script>
{% endblock %}
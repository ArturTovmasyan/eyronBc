            <argument/>
            <argument>AppBundle\Entity\Aphorism</argument>
            <argument/>
        </service>

        <!-- Aphorism -->
        <service id="sonata.admin.app.time.sentence" class="AppBundle\Admin\TimeSentenceAdmin">
            <tag name="sonata.admin" manager_type="orm" group="General" label="Time Sentence"/>

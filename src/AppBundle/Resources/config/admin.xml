            <argument/>
        </service>

        <!-- Goal -->
        <service id="sonata.admin.app.goal" class="AppBundle\Admin\GoalAdmin">
            <tag name="sonata.admin" manager_type="orm" group="General" label="Goal"/>
            <argument/>

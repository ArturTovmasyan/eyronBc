<div class="container">
    <div  class="signup">
        <div class=" row">

            <h1 class="text-center">{{ 'resetting.reset.title'|trans({}, 'FOSUserBundle') }}</h1>
            <div class="col-md-6 col-md-offset-3">
                <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset form-horizontal">

                    {% set errorMessage = form.new.first.vars.errors[0] is defined ? form.new.first.vars.errors[0].message : '' %}
                    <p class=text-center{% if errorMessage == 'Error' %}style="color:red"{% endif %}>{{ 'password.validation'|trans({}, 'FOSUserBundle') }}</p>
                    <div class="form-group">

                            {{ form_widget(form.new.first, {'attr': {'class' : 'form-control', 'placeholder': 'form.password'|trans({}, 'FOSUserBundle') } }) }}

                        </div>
                    <div class="form-group">
                            {{ form_widget(form.new.second, {'attr': {'class' : 'form-control', 'placeholder': 'form.re_password'|trans({}, 'FOSUserBundle') } }) }}


                        {% if errorMessage != 'Error' %}
                            <span class="text-center">{{ form_errors(form.new.first) }}</span>
                            {#{{ form_errors(form.new.second) }}#}
                        {% endif %}
                    </div>

                    {#{{ dump(form.new.f) }}#}
                    {#{{ form_widget(form) }}#}
                    <div class="form-group">
                        <input type="submit" class="btn btn-purple" value="{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
